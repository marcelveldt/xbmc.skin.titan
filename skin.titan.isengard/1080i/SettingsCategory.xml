<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="12">
    <defaultcontrol always="true">3</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	
    <include>defaultskinsettings</include>
	<onload>XBMC.RunScript(script.titanskin.helpers,SETSKINVERSION)</onload>
    <controls>

        <!--Global Background-->
        <include>GlobalBackground</include>
        <!--Time & Weather-->
        <include>TimeInfo</include>
		<!-- Now playing -->
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
		
        <!--Header-->
        <include>Header</include>
        
		
		<control type="group">
		<include>animation_window_open_close</include>
		
       <!--Panel-->
        <control type="image">
            <posx>5</posx>
            <posy>90</posy>
            <width>1911</width>
            <height>940</height>
            <texture>views/settings_panel.png</texture>
			<visible>skin.hastheme(classic)</visible>
        </control>
		
		
		<control type="image">
			<posx>60</posx>
			<posy>150</posy>
			<width>1800</width>
			<height>800</height>
			<texture>colors/color_white.png</texture>
			<animation effect="fade" reversible="false" end="80" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),80)">Conditional</animation>
			<animation effect="fade" reversible="false" end="60" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),60)">Conditional</animation>
			<animation effect="fade" reversible="false" end="40" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),40)">Conditional</animation>
			<animation effect="fade" reversible="false" end="20" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),20)">Conditional</animation>
			<animation effect="fade" reversible="false" end="0" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),0)">Conditional</animation>
			<colordiffuse>$VAR[panel_color]</colordiffuse>
			<visible>!skin.hastheme(classic)</visible>
		</control>
		
		<control type="image">
			<posx>60</posx>
			<posy>150</posy>
			<width>520</width>
			<height>800</height>
			<texture>colors/color_white.png</texture>
			<animation effect="fade" reversible="false" end="80" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),80)">Conditional</animation>
			<animation effect="fade" reversible="false" end="60" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),60)">Conditional</animation>
			<animation effect="fade" reversible="false" end="40" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),40)">Conditional</animation>
			<animation effect="fade" reversible="false" end="20" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),20)">Conditional</animation>
			<animation effect="fade" reversible="false" end="0" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),0)">Conditional</animation>
			<colordiffuse>$VAR[panel_color]</colordiffuse>
			<visible>!skin.hastheme(classic)</visible>
		</control>
		
		<control type="grouplist" id="3000">
			<posx>90</posx>
			<posy>170</posy>
			<width>450</width>
			<ondown>9000</ondown>
			<!--default setting buttons-->
			<control type="grouplist" id="3">
				<description>Button Area</description>
				<height>750</height>
				<itemgap>-</itemgap>
				<onleft>5</onleft>
				<onright>5</onright>
				<ondown>3001</ondown>
				<orientation>vertical</orientation>
				<include>animation_fade_visible_hidden</include>
			</control>
	
		</control>
        <control type="grouplist" id="5">
            <description>Control Area</description>
            <posx>605</posx>
            <posy>170</posy>
            <width>1230</width>
            <height>750</height>
            <itemgap>3</itemgap>
            <onleft>3</onleft>
            <onright>3</onright>
            <onup>5</onup>
            <ondown>5</ondown>
            <orientation>vertical</orientation>
			<visible>!Control.HasFocus(3003)</visible>
			
        </control>
        <control type="button" id="7">
            <description>Default Button</description>
            <focusedcolor>black</focusedcolor>
            <font>Reg28</font>
            <align>left</align>
            <height>50</height>
        </control>
        <control type="radiobutton" id="8">
            <description>Default Radio Button</description>
            <focusedcolor>black</focusedcolor>
            <font>Reg28</font>
            <align>left</align>
            <height>50</height>
            <radioposx>1075</radioposx>
        </control>
        <control type="spincontrolex" id="9">
            <description>Default Spin Control</description>
            <focusedcolor>black</focusedcolor>
            <font>Reg28</font>
            <align>left</align>
            <height>50</height>
        </control>
		<control type="sliderex" id="13">
			<description>Default Slider</description>
			<posx>0</posx>
			<posy>0</posy>
			<include>DialogButton</include>
			<textwidth>352</textwidth>
			<textoffsetx>20</textoffsetx>
			<sliderwidth>140</sliderwidth>
			<sliderheight>20</sliderheight>
			<align>left</align>
			<texturesliderbar>osd/slider_back.png</texturesliderbar>
			<textureslidernib>osd/orb_nofo.png</textureslidernib>
			<textureslidernibfocus>osd/orb_fo.png</textureslidernibfocus>
		</control>

        <control type="button" id="10">
            <description>Default Category Button</description>
            <focusedcolor>black</focusedcolor>
            <font>Reg28</font>
            <align>left</align>
            <height>50</height>
        </control>
        <control type="grouplist" id="9000">
            <posx>90</posx>
            <posy>760</posy>
            <width>450</width>
            <height>600</height>
            <onleft>9000</onleft>
            <onright>5</onright>
            <onup>3</onup>
            <ondown>3</ondown>
            <onback>3</onback>
            <itemgap>0</itemgap>
            <control type="label" id="200">
                <height>50</height>
                <font>Reg28</font>
                <font>Reg28</font>
                <label>31071</label>
                <textcolor>white</textcolor>
                <align>left</align>
            </control>
            <control type="button" id="20">
                <description>Setting level button</description>
                <focusedcolor>black</focusedcolor>
                <font>Reg28</font>
                <align>left</align>
                <height>50</height>
                <label>10037</label>
                <onclick>SettingsLevelChange</onclick>
            </control>
            <control type="button" id="21">
                <description>Reset button</description>
                <font>Reg28</font>
                <focusedcolor>black</focusedcolor>
                <align>left</align>
                <height>50</height>
                <label>10035</label>
                <onclick>SettingsReset</onclick>
            </control>
        </control>
		 </control>
		<!--Footer-->
        <include condition="!skin.hassetting(nofooterbar)">Footer</include>
		<!--Titan Version-->
        <include>TitanVersion</include>
		
    </controls>
</window>