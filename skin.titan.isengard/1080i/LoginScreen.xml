<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">52</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
		<!-- loginscreen background -->
        <control type="image">
            <include>DimensionsFullscreen</include>
			<include>backgroundfade</include>
            <texture background="true">$VAR[splashScreenImage]</texture>
            <fadetime>800</fadetime>
        </control>
        <!--Login Screen-->
        <control type="group">
            <control type="list" id="52">
                <posx>760</posx>
                <posy>120</posy>
                <width>650</width>
                <height>360</height>
                <onleft></onleft>
                <onright>noop</onright>
                <onup>52</onup>
                <ondown>52</ondown>
                <pagecontrol></pagecontrol>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <movement>1</movement>
                <itemlayout height="140">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>120</width>
                        <height>120</height>
                        <texture background="true" fallback="common/profil/avatar.png">$INFO[Listitem.Icon]</texture>
                    </control>
                    <control type="group">
                        <control type="label">
                            <posx>140</posx>
                            <posy>22</posy>
                            <width>490</width>
                            <height>40</height>
                            <textcolor>lightgrey</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <font>Light42</font>
                            <align>left</align>
                            <aligny>center</aligny>
                        </control>
                        <control type="label">
                            <posx>140</posx>
                            <posy>61</posy>
                            <width>490</width>
                            <height>40</height>
                            <textcolor>lightgrey</textcolor>
                            <label>$INFO[ListItem.Label2]</label>
                            <font>Light30</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <scroll>false</scroll>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout height="140">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>120</width>
                        <height>120</height>
                        <texture background="true" fallback="common/profil/avatar.png">$INFO[Listitem.Icon]</texture>
                    </control>
                    <control type="group">
                        <control type="label">
                            <posx>140</posx>
                            <posy>22</posy>
                            <width>490</width>
                            <height>40</height>
                            <textcolor>white</textcolor>
                            <label>[B]$INFO[ListItem.Label][/B]</label>
                            <font>Light42</font>
                            <align>left</align>
                            <aligny>center</aligny>
                        </control>
                        <control type="label">
                            <posx>140</posx>
                            <posy>61</posy>
                            <width>490</width>
                            <height>40</height>
                            <textcolor>white</textcolor>
                            <label>$INFO[ListItem.Label2]</label>
                            <font>Light30</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <scroll>false</scroll>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>