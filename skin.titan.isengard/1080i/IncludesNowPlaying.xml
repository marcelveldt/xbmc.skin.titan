<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--NowPlayingMusic-->
    <include name="NowPlayingMusicClassic">
        <control type="group" id="9999">
            <!--Panel-->
            <visible>Player.HasAudio</visible>
            <visible>!Window.IsActive(Settings.xml) + !Window.IsActive(SettingsCategory.xml)  + !Window.IsActive(SettingsSystemInfo.xml) + !Window.IsActive(SkinSettings.xml) + !Control.IsVisible(57)</visible>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml) + !Window.IsActive(DialogVideoInfo.xml)</visible>
			<visible>IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive))</visible>
			<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
            <posx>650</posx>
            <posy>0</posy>
            <control type="image">
                <!--Panel-->
                <posx>0</posx>
                <posy>0</posy>
                <width>633</width>
                <height>238</height>
                <texture>dialogs/nowplaying/nowplaying_music.png</texture>
            </control>
            <control type="image">
                <!--Cover-->
                <posx>90</posx>
                <posy>44</posy>
                <width>133</width>
                <height>133</height>
                <fadetime>200</fadetime>
                <texture background="true" fallback="cover_default.png" diffuse="cover_matte_cdart.png">$INFO[MusicPlayer.Cover]</texture>
                <aspectratio align="center" aligny="top">stretch</aspectratio>
            </control>
            <control type="label">
                <!--Now Playing-->
                <posx>255</posx>
                <posy>40</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>31040</label>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>255</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg30</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[MusicPlayer.Artist] - $INFO[MusicPlayer.Title]</label>
                <visible>!IsEmpty(MusicPlayer.Artist)</visible>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>255</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg30</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Window(Home).Property(streamtitle)] - $INFO[MusicPlayer.Title]</label>
                <visible>IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Artist) + !IsEmpty(MusicPlayer.Title)</visible>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>255</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg30</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Window(Home).Property(streamtitle)]</label>
                <visible>IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Title)</visible>
            </control>
            <control type="label">
                <!--Play Time-->
                <posx>255</posx>
                <posy>125</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
                <visible>Player.HasDuration</visible>
            </control>
            <control type="label">
                <!--Play Time-->
                <posx>255</posx>
                <posy>125</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Player.Time]</label>
                <visible>IsEmpty(Player.Duration)</visible>
            </control>
            <control type="progress">
                <!--Process-->
                <posx>255</posx>
                <posy>124</posy>
                <width>285</width>
                <texturebg></texturebg>
                <midtexture border="4">osd/ProgressMidSmall.png</midtexture>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
        </control>
    </include>
    <!--NowPlayingVideo-->
    <include name="NowPlayingVideoClassic">
        <control type="group" id="9999">
            <!--Panel-->
            <visible>Player.HasVideo</visible>
            <visible>!Window.IsActive(Settings.xml) + !Window.IsActive(SettingsCategory.xml)  + !Window.IsActive(SettingsSystemInfo.xml) + !Window.IsActive(SkinSettings.xml) + !Control.IsVisible(57)</visible>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml) + !Window.IsActive(DialogVideoInfo.xml)</visible>
			<visible>IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive))</visible>
			<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
            <posx>590</posx>
            <posy>-30</posy>
            <control type="image">
                <!--Panel-->
                <posx>0</posx>
                <posy>0</posy>
                <width>734</width>
                <height>238</height>
                <texture>dialogs/nowplaying/nowplaying_video.png</texture>
            </control>
            <control type="image">
                <!--Black Back-->
                <posx>90</posx>
                <posy>44</posy>
                <width>240</width>
                <!-- +8 -->
                <height>131</height>
                <!-- +2 -->
                <texture>common/black.png</texture>
            </control>
            <control type="label">
                <!--Now Playing-->
                <posx>355</posx>
                <posy>40</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>31040</label>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>357</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Bold34</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[VideoPlayer.Title]</label>
                <scroll>false</scroll>
            </control>
            <control type="label">
                <!--Play Time-->
                <posx>355</posx>
                <posy>125</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
            </control>
            <control type="progress">
                <!--Process-->
                <posx>357</posx>
                <posy>124</posy>
                <width>285</width>
                <texturebg></texturebg>
                <midtexture border="4">osd/ProgressMidSmall.png</midtexture>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
        </control>
        <control type="group">
            <!--Video Window-->
            <visible>Player.HasVideo</visible>
            <animation effect="slide" start="1500" end="0" time="0" delay="1500" reversible="false">WindowOpen</animation>
            <animation effect="slide" start="0" end="1500" time="0" reversible="false">WindowClose</animation>
            <animation effect="slide" start="1500" end="0" time="0" delay="1500" reversible="false">Visible</animation>
            <animation effect="slide" start="0" end="1500" time="0" reversible="false">Hidden</animation>
            <visible>!Window.IsActive(Settings.xml) + !Window.IsActive(SettingsCategory.xml)  + !Window.IsActive(SettingsSystemInfo.xml) + !Window.IsActive(SkinSettings.xml) + !Control.IsVisible(57)</visible>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml) + !substring(ListItem.Path,plugin)]</visible>
			<visible>IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive))</visible>
			<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
            <posx>590</posx>
            <posy>-30</posy>
            <control type="videowindow">
                <!--Video Window-->
                <posx>94</posx>
                <posy>45</posy>
                <width>232</width>
                <!--1,777-->
                <height>131</height>
            </control>
        </control>
    </include>

	<include name="NowPlayingModern">
		<include>nowplayingbackground</include>
        <control type="group" id="88888">
            <!--Panel-->
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml) + !ControlGroup(400).HasFocus() + !ControlGroup(77777).HasFocus</visible>
			<visible>![!IsEmpty(Window(Home).Property(activewidget)) + Skin.HasSetting(AutoShowWidgets)]</visible>
			<visible>[[Player.HasVideo + !IsEmpty(VideoPlayer.Title)] | [Player.HasAudio + !IsEmpty(MusicPlayer.Title)] | Player.IsInternetStream]</visible>
			<visible>IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive))</visible>
			<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
			<include>DimensionsFullscreen</include>
			<animation effect="slide" start="0,-400" end="0,0" tween="cubic" easing="out" delay="0" time="250" reversible="false">Visible</animation>
			<animation effect="slide" start="0,0" end="0,-400" tween="cubic" easing="out" delay="0" time="250" reversible="false">Hidden</animation>
            <control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>140</height>
				<texture>colors/color_white.png</texture>
				<animation effect="fade" end="80" time="0" reversible="false" condition="StringCompare(Skin.String(FooterOpacity),80)">Conditional</animation>
					<animation effect="fade" end="60" time="0" reversible="false" condition="StringCompare(Skin.String(FooterOpacity),60)">Conditional</animation>
					<animation effect="fade" end="40" time="0" reversible="false" condition="StringCompare(Skin.String(FooterOpacity),40)">Conditional</animation>
					<animation effect="fade" end="20" time="0" reversible="false" condition="StringCompare(Skin.String(FooterOpacity),20)">Conditional</animation>
				<colordiffuse>$VAR[panel_color]</colordiffuse>
			</control>
			<include>TimeInfo</include>
            <control type="fadelabel">
                <!--Now Playing-->
                <posx>310</posx>
                <posy>15</posy>
                <width>885</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>white</textcolor>
                <label>$VAR[NowPlayingLabel]</label>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>310</posx>
                <posy>70</posy>
                <width>1100</width>
                <align>left</align>
                <font>Bold45</font>
                <textcolor>white</textcolor>
                <label>$VAR[NowPlayingTitle]</label>
                <scroll>false</scroll>
            </control>
			<!-- cd cover -->
			<control type="image">
				<posx>110</posx>
				<posy>10</posy>
				<width>123</width>
				<height>123</height>
				<aligny>center</aligny>
				<aspectratio align="left">keep</aspectratio>
				<fadetime>300</fadetime>
				<animation effect="rotate" end="-360" center="auto" time="4800" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<texture background="true" fallback="defaultcovers/cd.png">$INFO[Player.FolderPath]cdart.png</texture>
				<visible>Player.HasAudio</visible>
			</control>
			<control type="image">
				<!--music cover-->
				<posx>60</posx>
                <posy>10</posy>
				<width>123</width>
				<height>123</height>
				<fadetime>200</fadetime>
				<texture background="true" diffuse="matte_cdart.png" fallback="DefaultAddonMusic.png">$INFO[Player.Art(thumb)]</texture>
				<aspectratio align="left" aligny="top">stretch</aspectratio>
				<visible>Player.HasAudio</visible>
			</control>
			<control type="image">
				<!--Cover for all other-->
				<posx>60</posx>
                <posy>20</posy>
				<width>200</width>
				<height>110</height>
				<fadetime>200</fadetime>
				<texture background="true">$VAR[VideoPlayerCover]</texture>
				<aspectratio align="left" aligny="top">keep</aspectratio>
				<visible>Player.HasVideo</visible>
			</control>
			<!-- hidden button to go fullscreen on click -->
			<control type="button">
				<posx>-60</posx>
				<posy>-20</posy>
				<width>2040</width>
				<height>180</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>Light32</font>
				<label>-</label>
				<textcolor>-</textcolor>
				<focusedcolor>-</focusedcolor>
				<disabledcolor>-</disabledcolor>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onclick condition="player.hasaudio">ActivateWindow(visualisation)</onclick>
				<onclick condition="player.hasvideo">ActivateWindow(fullscreenvideo)</onclick>
			</control>
			<control type="grouplist">
                <!--OSD-->
                <posx>1530</posx>
                <posy>55</posy>
                <width>1000</width>
                <height>130</height>
                <itemgap>0</itemgap>
				<visible>Skin.HasSetting(EnableTouchSupport)</visible>
                <orientation>horizontal</orientation>
                <control type="button">
                    <!--Skip Back-->
                    <!--visible>ControlGroup(20).HasFocus()</visible-->
                    <include>animation_fade_visible_hidden</include>
                    <width>90</width>
                    <height>98</height>
                    <label>210</label>
                    <font>-</font>
                    <texturefocus>osd/OSDPreviousFO.png</texturefocus>
                    <texturenofocus>osd/OSDPreviousNF.png</texturenofocus>
                    <onclick>PlayerControl(Previous)</onclick>
                </control>
                <control type="togglebutton">
                    <label></label>
                    <altlabel></altlabel>
                    <include>animation_fade_visible_hidden</include>
                    <width>90</width>
                    <height>98</height>
                    <font>-</font>
                    <texturefocus>osd/OSDPauseFO.png</texturefocus>
                    <texturenofocus>osd/OSDPauseNF.png</texturenofocus>
                    <usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
                    <alttexturefocus>osd/OSDPlayFO.png</alttexturefocus>
                    <alttexturenofocus>osd/OSDPlayNF.png</alttexturenofocus>
                    <onclick>PlayerControl(Play)</onclick>
                </control>
                <control type="button">
                    <label></label>
                    <!--Stop-->
                    <include>animation_fade_visible_hidden</include>
                    <width>90</width>
                    <height>98</height>
                    <font>-</font>
                    <texturefocus>osd/OSDStopFO.png</texturefocus>
                    <texturenofocus>osd/OSDStopNF.png</texturenofocus>
                    <onclick>PlayerControl(Stop)</onclick>
                </control>
                <control type="button">
                    <!--Next-->
                    <include>animation_fade_visible_hidden</include>
                    <width>90</width>
                    <height>98</height>
                    <label>209</label>
                    <font>-</font>
                    <texturefocus>osd/OSDNextFO.png</texturefocus>
                    <texturenofocus>osd/OSDNextNF.png</texturenofocus>
                    <onclick>PlayerControl(Next)</onclick>
                </control>
            </control>
        
		</control>
        
    </include>
	
	<include name="nowplayingbackground">
		<control type="group">
		<visible>[!Skin.HasSetting(DisableNowPlayingBackground) + Player.HasMedia + !Control.IsVisible(507) + !Control.IsVisible(DialogVideoInfo.xml) + IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive))] | [!IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive)) + Player.HasVideo]</visible>
		<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
			<!--normal artist image (fallback)-->
			<control type="group">
				<visible>Player.HasAudio</visible>
				<control type="image">
					<include>DimensionsFullscreen</include>
					<include>backgroundfade</include>
					<texture background="true" fallback="special://skin/extras/backgrounds/hover_my music.jpg">$INFO[Player.Art(fanart)]</texture>
					<fadetime>800</fadetime>
					<animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
					<animation effect="slide" start="-10,-10" end="10,10" time="5000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
					<visible>IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive))</visible>
					<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
				</control>
			</control>
			<control type="visualisation" id="2">
				<description>visualisation</description>
				<include>DimensionsFullscreen</include>
				<visible>Player.HasAudio + ![StringCompare(Visualisation.Name,waveform) | StringCompare(Visualisation.Name,opengl spectrum) | StringCompare(Visualisation.Name,directx spectrum)]</visible>
				<visible>IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive))</visible>
				<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
			</control>
			<!-- artist slideshow -->
			<control type="multiimage">
				<aspectratio>scale</aspectratio>
				<include>DimensionsFullscreen</include>
				<timeperimage>10000</timeperimage>
				<randomize>true</randomize>
				<fadetime>600</fadetime>
				<loop>yes</loop>
				<imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
				<animation effect="fade" start="100" end="20" time="0" condition="![StringCompare(Visualisation.Name,waveform) | StringCompare(Visualisation.Name,opengl spectrum) | StringCompare(Visualisation.Name,directx spectrum) | IsEmpty(Visualisation.Name)]">Conditional</animation>
				<animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
				<animation effect="slide" start="-10,-10" end="10,10" time="5000" tween="cubic" easing="inout" pulse="true" condition="Skin.HasSetting(BackgroundAnimation)">Conditional</animation>
				<visible>Player.HasAudio + !IsEmpty(MusicPlayer.Title) + System.HasAddon(script.artistslideshow)</visible>
				<visible>IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive))</visible>
				<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
			</control>
			<control type="visualisation" id="2">
				<description>visualisation</description>
				<include>DimensionsFullscreen</include>
				<visible>Player.HasAudio + [StringCompare(Visualisation.Name,waveform) | StringCompare(Visualisation.Name,opengl spectrum) | StringCompare(Visualisation.Name,directx spectrum)]</visible>
				<visible>IsEmpty(Window(Home).Property(ThemeMediaMB3IsAlive))</visible>
				<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
			</control>
			<control type="videowindow">
				<include>DimensionsFullscreen</include>
				<visible>Player.HasVideo</visible>
			</control>
			<!--Dialog Overlay-->
			<control type="group">
				<visible>Player.HasMedia</visible>
				<include>DialogOverlay</include>
				<visible>IsEmpty(Window(10025).Property(TvTunesIsAlive))</visible>
			</control>
		</control>


	</include>
	
	</includes>