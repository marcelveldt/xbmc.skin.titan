					</control>
					<control type="label">
						<width>400</width>
						<height>90</height>
						<font>Bold30</font>
						<textoffsetx>20</textoffsetx>
						<textcolor>white</textcolor>
						<selectedcolor>mainblue</selectedcolor>
						<label>$VAR[NextAiredLabel]</label>
					</control>
					<control type="label">
						<posx>400</posx>
						<posy>0</posy>
						<width>400</width>
						<height>90</height>
						<font>Reg24</font>
						<textoffsetx>20</textoffsetx>
