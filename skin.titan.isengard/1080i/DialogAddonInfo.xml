<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="146">
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
            <control type="image">
                <posx>630</posx>
                <posy>0</posy>
                <width>1290</width>
                <height>1080</height>
				<texture>colors/color_white.png</texture>
				<animation effect="fade" end="99" time="0" condition="true">Conditional</animation>
				<colordiffuse>$VAR[panel_color]</colordiffuse>
				<visible>!skin.hastheme(classic)</visible>
            </control>
			<control type="image">
                <posx>600</posx>
                <posy>-60</posy>
                <width>1500</width>
                <height>1240</height>
                <texture border="39">dialogs/default/bg.png</texture>
				<colordiffuse>grey</colordiffuse>
				<visible>skin.hastheme(classic)</visible>
            </control>
			
			<!-- close dialog -->
			<control type="button">
				<label></label>
				<include>animation_fade_visible_hidden</include>
				<width>60</width>
				<height>60</height>
				<right>60</right>
                <posy>40</posy>
				<font>-</font>
				<texturefocus colordiffuse="white">touchcontrols/icon_close.png</texturefocus>
				<texturenofocus colordiffuse="bbwhite">touchcontrols/icon_close.png</texturenofocus>
				<aspectratio aligny="bottom">keep</aspectratio>
				<onclick>back</onclick>
				<visible>Skin.HasSetting(EnableTouchSupport)</visible>
			</control>
			
           <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<shadowcolor>black</shadowcolor>
                <align>left</align>
				<height>100</height>
				<label>24003</label>
            </control>
			<!-- title -->
			<control type="label">
				<posx>700</posx>
				<posy>150</posy>
				<width>800</width>
				<font>Reg36</font>
				<align>left</align>
				<textcolor>aawhite</textcolor>
				<label>$INFO[ListItem.Property(Addon.Name)]</label>
            </control>

			
			<control type="image">
				<posx>680</posx>
                <posy>220</posy>
				<width>1200</width>
				<height>250</height>
				<texture border="5">dialogs/default/inner.png</texture>
			</control>
			
			<!--Icon-->
            <control type="image" id="3">
                <right>-5</right>
                <posy>235</posy>
                <width>350</width>
                <height>220</height>
                <fadetime>800</fadetime>
                <aspectratio align="center" aligny="center">keep</aspectratio>
                <texture background="true" diffuse="cover_matte.png">$INFO[ListItem.Icon]</texture>
            </control>
			
            <control type="grouplist">
                <posx>680</posx>
                <posy>220</posy>

                <control type="button">
                     <!--Addon Type-->
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[146]</label>
                    <label2>$INFO[ListItem.Property(Addon.Type)]</label2>
                    <enable>false</enable>
					<disabledcolor>white</disabledcolor>
                </control>
                <control type="button">
                    <!--Autor-->
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[21863]:</label>
                    <label2>$INFO[ListItem.Property(Addon.Creator)]</label2>
                    <enable>false</enable>
					<disabledcolor>white</disabledcolor>
                </control>
                <control type="button">
                    <!--Version-->
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[24051]</label>
                    <label2>$INFO[ListItem.Property(Addon.Version)]</label2>
                    <enable>false</enable>
					<disabledcolor>white</disabledcolor>
                </control>
                <control type="fadelabel">
                    <!--Disclaimer-->
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
					<autoscroll>true</autoscroll>
                    <label>   $INFO[ListItem.Property(Addon.Disclaimer)]</label>
					<textcolor>red</textcolor>
					<visible>!IsEmpty(ListItem.Property(Addon.Disclaimer))</visible>
                </control>
            </control>
            <control type="image">
                <posx>680</posx>
                <posy>486</posy>
                <width>1200</width>
                <height>430</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="textbox" id="4">
                <description>Plot value</description>
                <posx>700</posx>
                <posy>506</posy>
                <width>1160</width>
                <height>388</height>
                <align>justify</align>
                <pagecontrol>60</pagecontrol>
                <label fallback="19055">[COLOR=mainblue]$INFO[ListItem.Property(Addon.Summary)][/COLOR][CR]$INFO[ListItem.Property(Addon.Description)]</label>
				<disabledcolor>white</disabledcolor>
            </control>
			<!--Button Group-->
            <control type="grouplist" id="9000">
                <posx>660</posx>
                <posy>940</posy>
				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
                <defaultcontrol>5</defaultcontrol>
				<onup>50</onup>
				<width>1220</width>
				<control type="button" id="8">
                  <!--Update Addon button-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>24069</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(8)</visible>
                </control>
				<control type="button" id="6">
                    <!--Install/Uninstall Addon button-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>24022</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(6)</visible>
                </control>
                <control type="button" id="7">
                     <!--Enable/Disable Addon button-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>24021</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(7)</visible>
                </control>

                <control type="button" id="9">
                   <!--Addon Settings-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>24020</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(9)</visible>
                </control>
				
				
				<control type="button" id="10">
                    <!--Changelog button-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>24036</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(10)</visible>
                </control>
				
				<control type="button" id="12">
                  <!--Launch Addon button-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>518</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(12)</visible>
                </control>
            </control>
        </control>
    </controls>
</window>