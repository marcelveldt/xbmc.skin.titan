<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="0">
    <defaultcontrol always="true">300</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	
    <include>defaultskinsettings</include>
	<onload condition="System.HasAddon(plugin.video.plexbmc)">XBMC.RunScript(script.titanskin.helpers,UPDATEPLEXLINKS)</onload>
	
	<onload condition="Skin.HasSetting(EnableWeatherNotifications)">XBMC.RunScript(script.titanskin.helpers,CHECKNOTIFICATIONS,weather)</onload>
	<onload condition="!SubString(Window(Home).Property(HomeLoaded),loaded)">SetProperty(HomeLoaded,loaded,Home)</onload>
	<onload condition="Skin.String(GadgetRows, enhanced)">AlarmClock(SpotlightMove,Control.Move(1508,1),00:08,silent,loop)</onload>
	<onunload>CancelAlarm(SpotlightMove,true)</onunload>
	<onunload>SetProperty(ShowFastAllMovies, hide, Home)</onunload>
	<onunload>ClearProperty(submenu)</onunload>
    <onload>ClearProperty(submenu)</onload>
	<onunload>Dialog.Close(shutdownmenu,true)</onunload>
	<onunload>ClearProperty(activewidget)</onunload>
	<onload>ClearProperty(ExtraFanArtPath, Home)</onload>
	
	<!-- unload widgets from memory when home not active -->
	<onunload condition="!Skin.ToggleSetting(DisableWidgetRefresh)">SetProperty(refreshwidgets,hide,home)</onunload>
	<onload condition="!Skin.HasSetting(HomeMenuUseMBforMovies) + !Skin.ToggleSetting(DisableWidgetRefresh)">ClearProperty(refreshwidgets,home)</onload>
	
	<!-- refresh widgets after 5 seconds -->
	<onload condition="Skin.HasSetting(HomeMenuUseMBforMovies) + !Skin.ToggleSetting(DisableWidgetRefresh)">AlarmClock(refreshwidgets1,SetProperty(refreshwidgets,refresh,home),00:06,silent)</onload>
	<onload condition="Skin.HasSetting(HomeMenuUseMBforMovies) + !Skin.ToggleSetting(DisableWidgetRefresh)">AlarmClock(refreshwidgets2,ClearProperty(refreshwidgets,home),00:06,silent)</onload>
	
	<onload>300</onload>
    <controls>
	
	<!--Global Background-->
	<include>GlobalBackground</include>
		
		
		<!-- Header -->
		<include condition="Skin.HasSetting(EnableTouchSupport)">TouchScreenWorkaround</include>
		
		<!--NowPlaying-->
		<include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
		<include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
		
		<!--Footer-->
		<control type="group">
			<include condition="[!skin.hassetting(nofooterbar) + !Skin.String(GadgetRows, enhanced) + !Skin.String(GadgetRows, simplever)] + ![Skin.String(GadgetRows, simplehor) + !system.getbool(lookandfeel.enablerssfeeds) + !Skin.HasSetting(EnableTouchSupport)]">Footer</include>
		</control>
		
		<!--Time-->
		<control type="group">
			<animation effect="slide" end="-20" time="0" condition="Skin.HasSetting(HideWidgetPanelBackground) + Skin.String(GadgetRows, enhanced)">Conditional</animation>
			<include>TimeInfo</include>
		</control>
	
	
		<!-- Home Screen -->
		<control type="group">
			<include>animation_window_open_close</include>
			<visible>Window.IsActive(home)</visible>
			<include condition="!Skin.HasSetting(WeatherOnHomeShowCurrentCond) + Skin.HasSetting(WeatherOnHome)">WeatherInfo</include>
			<include condition="Skin.HasSetting(WeatherOnHomeShowCurrentCond) + Skin.HasSetting(WeatherOnHome)">CurrentWeatherInfo</include>
			<include>ProfileInfo</include>
					
			<!-- Kodi Logo image -->
			<control type="image">
				<posx>35</posx>
				<posy>10</posy>
				<height>110</height>
				<aspectratio align="left">keep</aspectratio>
				<texture>$VAR[LogoImage]</texture>
				<visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml) + !Skin.HasSetting(WeatherOnHome) + !Skin.HasSetting(ShowProfile) + ![ControlGroup(77777).HasFocus | StringCompare(Window(Home).Property(ShowWidget),show)] + !Control.IsVisible(88888)</visible>
				<visible>!Skin.String(GadgetRows, simplever)</visible>
				<visible>!Skin.HasSetting(ShowProfile) + !Skin.HasSetting(WeatherOnHome)</visible>
			</control>
					
			<include condition="System.HasAddon(plugin.video.plexbmc)">PlexBackgroundWidgets</include>
			
			<!--Home tiles List 300-->
			<include condition="[!Skin.HasSetting(UseFixedHomeFocus) + Skin.String(GadgetRows, 1)] | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)">HomeLayoutNormal</include>
			<include condition="Skin.HasSetting(UseFixedHomeFocus) + Skin.String(GadgetRows, 1)">HomeLayoutFixedFocus</include>
			
			<include condition="Skin.String(GadgetRows, enhanced)">EnhancedHomeScreen</include>
			<include condition="Skin.String(GadgetRows, simplehor)">simplehome_horizontal</include>
			<include condition="Skin.String(GadgetRows, simplever)">simplehome_vertical</include>
		
		
			<control type="scrollbar" id="60">
				<posx>1835</posx>
				<posy>390</posy>
				<height>570</height>
				<onleft>50</onleft>
				<onright>noop</onright>
				<visible>false</visible>
			</control>
			
	
			<!-- submenu -->
			<include condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.String(SubmenuLayout, vertical) + [Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)]">HomeMenuSubMenuVertical</include>
			<include condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.String(SubmenuLayout, horizontal) + [Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)]">HomeMenuSubMenuHorizontal</include>
			<include condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.String(SubmenuLayout, tiles) + [Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)]">HomeMenuSubMenuSmallTiles</include>

			<!-- subpages submenu -->
			<include condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.String(SubmenuLayout, subpage) + [Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)]">HomeMenuSubMenuPage</include>


		</control>
		
		
		
		<control type="button" id="2">
			<description>powerbutton</description>
			<posx>930</posx>
			<posy>1010</posy>
			<width>60</width>
			<height>60</height>
			<onup>300</onup>
			<onright>300</onright>
			<onleft>300</onleft>
			<texturefocus colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">common/shutdown2.png</texturefocus>
			<texturenofocus colordiffuse="white">common/shutdown2.png</texturenofocus>
			<onclick>ActivateWindow(111)</onclick>
			<onfocus>ActivateWindow(111)</onfocus>
			<visible>!Skin.String(GadgetRows, simplever)</visible>
			<visible>!Skin.HasSetting(EnableTouchSupport)</visible>
			<visible>!Skin.HasSetting(DisablePowerMenu)</visible>
			<include>animation_fade_visible_hidden</include>
			<visible allowhiddenfocus="true">![[Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)] + Control.IsVisible(4444) + [Skin.String(SubmenuLayout, horizontal) | Skin.String(SubmenuLayout, tiles)]]</visible>
			<visible>!system.getbool(lookandfeel.enablerssfeeds)</visible>
			<animation type="Conditional" condition="[ControlGroup(77777).HasFocus | StringCompare(Window(Home).Property(ShowWidget),show)] + [Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2)]">
				<effect type="slide" start="0,0" end="0,800" time="400" tween="cubic" easing="inout" delay="0" />
			</animation>
			<animation effect="slide" end="0,-17" time="0" condition="skin.hastheme(classic)">Conditional</animation>
		
		
		</control>
		
	</controls>
</window>
