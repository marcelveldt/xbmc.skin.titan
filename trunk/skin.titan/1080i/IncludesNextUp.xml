<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="NextUpItemlayout">
        <control type="image">
            <!--Panel Shadow-->
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <texture>home/home_shadow.png</texture>
        </control>
        <control type="image">
            <!--Panel Normal-->
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <texture background="true" diffuse="home/home_matte.png">$INFO[ListItem.Art(fanart)]</texture>
            <aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
            <fadetime>800</fadetime>
            <include>backgroundfade</include>
        </control>
		<control type="image">
            <!--Panel Normal-->
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <texture background="true" diffuse="home/home_matte.png">$INFO[ListItem.Thumb]</texture>
            <aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
            <fadetime>800</fadetime>
            <include>backgroundfade</include>
			<visible>IsEmpty(ListItem.Art(fanart))</visible>
        </control>
        <control type="image">
            <!--Panel Ovelay-->
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <colordiffuse>ccFFFFFF</colordiffuse>
            <texture diffuse="home/home_matte.png">home/home_overlay.png</texture>
        </control>
        <control type="label">
            <!--Label-->
            <posx>200</posx>
            <posy>130</posy>
            <width>360</width>
            <height>100</height>
            <align>center</align>
            <info>ListItem.Title</info>
            <font>Light32</font>
            <textcolor>darkgrey</textcolor>
        </control>
    </include>
    <include name="NextUpItemFocuslayout">
        <include>NextUpItemlayout</include>
        <control type="label">
            <!--Label White-->
            <animation type="Focus">
                <effect type="fade" start="0" end="100" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
            </animation>
            <animation type="UnFocus">
                <effect type="fade" start="100" end="0" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
            </animation>
            <posx>200</posx>
            <posy>130</posy>
            <width>360</width>
            <height>100</height>
            <align>center</align>
            <info>ListItem.Title</info>
            <font>Light32</font>
            <textcolor>white</textcolor>
        </control>
        <control type="image">
            <!--Panel Focus-->
            <animation type="Focus">
                <effect type="fade" start="0" end="100" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
            </animation>
            <animation type="UnFocus">
                <effect type="fade" start="100" end="0" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
            </animation>
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <texture>home/home_focus.png</texture>
        </control>
    </include>
</includes>