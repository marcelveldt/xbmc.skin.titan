<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="NextUpItemlayout">
        <control type="image">
            <!--Panel Shadow-->
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <texture>home/home_shadow.png</texture>
        </control>
        <control type="image">
            <!--Panel Normal-->
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <texture background="true" diffuse="home/home_matte.png">$INFO[ListItem.Art(fanart)]</texture>
            <aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
            <fadetime>800</fadetime>
            <include>backgroundfade</include>
        </control>
		<control type="image">
            <!--Panel Normal-->
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <texture background="true" diffuse="home/home_matte.png">$INFO[ListItem.Thumb]</texture>
            <aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
            <fadetime>800</fadetime>
            <include>backgroundfade</include>
			<visible>IsEmpty(ListItem.Art(fanart)) | !IsEmpty(ListItem.TVShowTitle)</visible>
        </control>
        <control type="image">
            <!--Panel Ovelay-->
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <colordiffuse>ccFFFFFF</colordiffuse>
            <texture diffuse="home/home_matte.png">home/home_overlay.png</texture>
        </control>
        <control type="label">
            <!--Label-->
            <posx>200</posx>
            <posy>130</posy>
            <width>360</width>
            <height>100</height>
            <align>center</align>
            <info>ListItem.Title</info>
            <font>Light32</font>
            <textcolor>darkgrey</textcolor>
        </control>
    </include>
    <include name="NextUpItemFocuslayout">
        <include>NextUpItemlayout</include>
        <control type="label">
            <!--Label White-->
            <animation type="Focus">
                <effect type="fade" start="0" end="100" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
            </animation>
            <animation type="UnFocus">
                <effect type="fade" start="100" end="0" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
            </animation>
            <posx>200</posx>
            <posy>130</posy>
            <width>360</width>
            <height>100</height>
            <align>center</align>
            <info>ListItem.Title</info>
            <font>Light32</font>
            <textcolor>white</textcolor>
        </control>
        <control type="image">
            <!--Panel Focus-->
            <animation type="Focus">
                <effect type="fade" start="0" end="100" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
            </animation>
            <animation type="UnFocus">
                <effect type="fade" start="100" end="0" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
            </animation>
            <posx>0</posx>
            <posy>0</posy>
            <width>400</width>
            <height>220</height>
            <texture>home/home_focus.png</texture>
        </control>
    </include>
	
	<include name="nextUpPanel">
	        <control type="image">
            <texture>views/nextup.png</texture>
            <aspectratio>stretch</aspectratio>
            <include>DimensionsFullscreen</include>
            <animation time="600" effect="fade">Visible</animation>
            <animation time="600" effect="fade">Hidden</animation>
            <animation effect="fade" time="600">WindowOpen</animation>
            <animation effect="fade" time="600">WindowClose</animation>
            <animation type="Conditional" condition="!Skin.HasSetting(ShowNextUppanel)">
                <effect type="slide" start="0,0" end="0,-1100" time="800" tween="cubic" easing="inout" />
            </animation>
        </control>
        <!-- NextUp -->
        <control type="grouplist" id="400">
            <posx>7</posx>
            <posy>15</posy>
            <width>1903</width>
            <height>1033</height>
            <itemgap>3</itemgap>
            <onback>Skin.Reset(ShowNextUppanel)</onback>
            <orientation>vertical</orientation>
            <animation time="600" effect="fade">Visible</animation>
            <animation time="600" effect="fade">Hidden</animation>
            <animation effect="fade" time="600">WindowOpen</animation>
            <animation effect="fade" time="600">WindowClose</animation>
            <animation type="Conditional" condition="!Skin.HasSetting(ShowNextUppanel)">
                <effect type="slide" start="0,0" end="0,-1100" time="800" tween="cubic" easing="inout" />
            </animation>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml)</visible>
            <!-- movies in progress MediaBrowser-->
            <control type="group">
                <visible>Skin.HasSetting(HomeMenuUseMBforMovies) | Skin.HasSetting(HomeMenuUseNetflixforMovies)</visible>
                <height>340</height>
                <control type="image">
                    <texture border="39">pvr/pvr_epg_panel.png</texture>
                    <aspectratio>stretch</aspectratio>
                    <height>330</height>
                    <visible>!Skin.HasSetting(NoFooterBar)</visible>
                </control>
                <control type="label">
                    <description>header label</description>
                    <posx>125</posx>
                    <width>1000</width>
                    <align>left</align>
                    <textcolor>white</textcolor>
                    <font>Bold32</font>
                    <label>31042</label>
                </control>
                <control type="panel" id="4001">
                    <posx>110</posx>
                    <posy>65</posy>
                    <width>1720</width>
                    <height>300</height>
                    <onleft></onleft>
                    <onright></onright>
                    <onup>Skin.Reset(ShowNextUppanel)</onup>
					<onup>300</onup>
                    <onback>Skin.Reset(ShowNextUppanel)</onback>
					<onback>300</onback>
                    <ondown>4002</ondown>
                    <orientation>horizontal</orientation>
                    <focusposition>-</focusposition>
                    <scrolltime tween="cubic" easing="inout">500</scrolltime>
                    <itemlayout width="440" height="280">
                        <include>NextUpItemlayout</include>
                    </itemlayout>
                    <focusedlayout width="440" height="280">
                        <control type="group">
                            <animation type="Focus">
                                <effect type="zoom" start="100" end="108" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
                            </animation>
                            <animation type="UnFocus">
                                <effect type="zoom" start="108" end="100" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
                            </animation>
                            <include>NextUpItemFocuslayout</include>
                        </control>
                    </focusedlayout>
                    <content target="video">$VAR[MoviesInProgressNextUp]</content>
                </control>
            </control>
            <!-- latest movies-->
            <control type="group">
                <height>340</height>
                <control type="image">
                    <texture border="39">pvr/pvr_epg_panel.png</texture>
                    <aspectratio>stretch</aspectratio>
                    <height>330</height>
                    <visible>!Skin.HasSetting(NoFooterBar)</visible>
                </control>
                <control type="label">
                    <description>header label</description>
                    <posx>125</posx>
                    <width>1000</width>
                    <align>left</align>
                    <textcolor>white</textcolor>
                    <font>Bold32</font>
                    <label>31044</label>
                </control>
                <control type="panel" id="4002">
                    <posx>110</posx>
                    <posy>65</posy>
                    <width>1720</width>
                    <height>300</height>
                    <onleft></onleft>
                    <onright></onright>
                    <onback>Skin.Reset(ShowNextUppanel)</onback>
					<onback>300</onback>
                    <onup condition="Control.IsVisible(4001)">4001</onup>
                    <onup condition="!Control.IsVisible(4001)">300</onup>
                    <ondown>4003</ondown>
                    <orientation>horizontal</orientation>
                    <focusposition>-</focusposition>
                    <scrolltime tween="cubic" easing="inout">500</scrolltime>
                    <itemlayout width="440" height="280">
                        <include>NextUpItemlayout</include>
                    </itemlayout>
                    <focusedlayout width="440" height="280">
                        <control type="group">
                            <animation type="Focus">
                                <effect type="zoom" start="100" end="108" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
                            </animation>
                            <animation type="UnFocus">
                                <effect type="zoom" start="108" end="100" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
                            </animation>
                            <include>NextUpItemFocuslayout</include>
                        </control>
                    </focusedlayout>
                    <content target="video">$VAR[LatestMoviesNextUp]</content>
                </control>
            </control>
            <!-- episodes in progress (mediabrowser) or recently added episodes (normal)-->
            <control type="group">
                <height>340</height>
				<width>1920</width>
                <control type="image">
                    <texture border="39">pvr/pvr_epg_panel.png</texture>
                    <aspectratio>stretch</aspectratio>
                    <height>330</height>
                    <visible>!Skin.HasSetting(NoFooterBar)</visible>
                </control>
                <control type="label">
                    <description>header label</description>
                    <posx>125</posx>
                    <width>1000</width>
                    <align>left</align>
                    <textcolor>white</textcolor>
                    <font>Bold32</font>
                    <label>$VAR[EpisodesNextUpLabel]</label>
                </control>
                <control type="panel" id="4003">
                    <posx>110</posx>
                    <posy>65</posy>
                    <width>1720</width>
                    <height>300</height>
                    <onleft></onleft>
                    <onright></onright>
                    <onup>4002</onup>
                    <ondown>Skin.Reset(ShowNextUppanel)</ondown>
                    <onback>Skin.Reset(ShowNextUppanel)</onback>
					<ondown>300</ondown>
                    <onback>300</onback>
                    <orientation>horizontal</orientation>
                    <focusposition>-</focusposition>
                    <scrolltime tween="cubic" easing="inout">500</scrolltime>
                    <itemlayout width="440" height="280">
                        <include>NextUpItemlayout</include>
                    </itemlayout>
                    <focusedlayout width="440" height="280">
                        <control type="group">
                            <animation type="Focus">
                                <effect type="zoom" start="100" end="108" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
                            </animation>
                            <animation type="UnFocus">
                                <effect type="zoom" start="108" end="100" time="300" center="auto" delay="0" tween="cubic" easing="inout" />
                            </animation>
                            <include>NextUpItemFocuslayout</include>
                        </control>
                    </focusedlayout>
                    <content target="video">$VAR[EpisodesNextUp]</content>
                </control>
            </control>
        </control>
    
	</include>
	
	
</includes>