<?xml version="1.0" encoding="UTF-8"?>

<window>

	<allowoverlay>no</allowoverlay>
	<defaultcontrol always="true">211</defaultcontrol>
	<onunload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=300&amp;group=mainmenu)</onunload>
	<onload>ClearProperty(shortcutDialog, Home)</onload>
	<controls>
	
	 <!--Global Background-->
        <include>GlobalBackground</include>
		<!--Time & Weather-->
        <include>TimeInfo</include>
		<!-- Now playing -->
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
		 
        <!--Header-->
        <include>Header</include>
		
		<control type="group">
			<posy>30</posy>
			<control type="image">
				<posx>0</posx>
				<posy>100</posy>
				<width>1913</width>
				<height>940</height>
				<texture>views/settings_panel.png</texture>
				<include>animation_fade_visible_hidden</include>
				<include>animation_list</include>
			</control>
		 </control>

		
		<control type="group">
			<top>-90</top>
			<include>FadeandZoom</include>
			<visible>!Window.IsActive(ShutdownMenu) + !Window.IsActive(contextmenu) + !Window.IsActive(filebrowser) + !Window.IsActive(virtualkeyboard) + !Window.IsVisible(selectdialog)</visible>

			<control type="group" id="200">

				<control type="list" id="211"> <!--Current shortcuts -->
					<left>100</left>
					<top>315</top>
					<width>1000</width>
					<height>780</height>
					<onright>300</onright>
					<orientation>vertical</orientation>
					<viewtype label="535">list</viewtype>
					<preloaditems>2</preloaditems>
					<pagecontrol>260</pagecontrol>
					<scrolltime>0</scrolltime>
					<selectedcolor>FF00b8ff</selectedcolor>
					
					
					<itemlayout width="1000" height="65">
						<control type="button">
                            <label></label>
                            <width>1100</width>
                            <height>60</height>
                            <font>Reg26</font>
                            <align>center</align>
                            <aligny>center</aligny>
                        </control>
						<control type="label"> <!--label-->
							<left>20</left>
							<width>460</width>
							<label>$VAR[customLibraryLabel]</label>
							<font>Reg26</font>
							<scroll>false</scroll>
							<textcolor>white</textcolor>
							<selectedcolor>FF00b8ff</selectedcolor>
						</control>
						
						<control type="label">
							<left>970</left>
							<width>300</width>
							<align>right</align>
							<info>ListItem.Label2</info>
							<font>Light25</font>
							<scroll>false</scroll>
							<textcolor>white</textcolor>
							<selectedcolor>FF00b8ff</selectedcolor>
						</control>
						
					</itemlayout>
					
					<focusedlayout width="1000" height="65">
						
						<control type="image"> <!--focus bg-->
							<left>0</left>
							<top>0</top>
							<width>1100</width>
							<height>60</height>
							<texture colordiffuse="mainblue">common/button-fo.png</texture>
							<animation effect="fade" start="100" end="35" time="100" condition="!Control.HasFocus(211)">Conditional</animation>
						</control>
						
						<control type="button">
                            <label></label>
                            <width>1100</width>
                            <height>60</height>
                            <font>Reg26</font>
                            <align>center</align>
                            <aligny>center</aligny>
                        </control>

						<control type="label"> <!--label-->
							<left>20</left>
							<width>460</width>
							<label>$VAR[customLibraryLabel]</label>
							<textcolor>black</textcolor>
							<font>Reg26</font>
							<scroll>false</scroll>
						</control>
						
						<control type="label"> <!--label-->
							<left>20</left>
							<width>460</width>
							<label>$VAR[customLibraryLabel]</label>
							<textcolor>white</textcolor>
							<font>Reg26</font>
							<scroll>false</scroll>
							<visible>!Control.HasFocus(211)</visible>
						</control>

						<control type="label">
							<left>970</left>
							<width>300</width>
							<align>right</align>
							<info>ListItem.Label2</info>
							<font>Light25</font>
							<scroll>false</scroll>
						</control>
						
					</focusedlayout>
					
				</control>
				
				<control type="group">
					
					<control type="scrollbar" id="260"> <!--scrollbar-->
						<left>1125</left>
						<top>315</top>
						<height>780</height>
						<onleft>211</onleft>
						<onright>211</onright>
						<showonepage>false</showonepage>
					</control>				
				</control>
				
			</control>

			<control type="grouplist" id="300">
				<left>1350</left>
				<top>315</top>
				<width>500</width>
				<height>780</height>
				<itemgap>5</itemgap>
				<orientation>vertical</orientation>
				<onleft>211</onleft>
				<scrolltime>0</scrolltime>
				
				<control type="button" id="401"> <!--select shortcut-->
					<width>465</width>
					<align>center</align>
					<onclick>noop</onclick>
					<visible>false</visible>
				</control>
				
				<control type="button" id="301"> <!--new shortcut-->
					<width>465</width>
					<align>center</align>
					<onclick>XBMC.RunScript(script.titanskin.helpers,SENDCLICK,401)</onclick>
					<label>$ADDON[script.skinshortcuts 32000]</label>
				</control>
				
				<control type="button" id="302"> <!--delete shortcut-->
					<width>465</width>
					<align>center</align>
					<onclick>noop</onclick>
					<label>$ADDON[script.skinshortcuts 32001]</label>
				</control>

				<control type="button" id="303"> <!--move up-->
					<width>465</width>
					<align>center</align>
					<onclick>noop</onclick>
					<label>$ADDON[script.skinshortcuts 32002]</label>
				</control>
				
				<control type="button" id="304"> <!--move down-->
					<width>465</width>
					<align>center</align>
					<onclick>noop</onclick>
					<label>$ADDON[script.skinshortcuts 32003]</label>
				</control>

				<control type="button" id="305"> <!--edit label-->
					<width>465</width>
					<align>center</align>
					<onclick>SetProperty(shortcutDialog, label, Home)</onclick>
					<label>$ADDON[script.skinshortcuts 32025]</label>
					<visible>!SubString(Container(211).ListItem.Property(labelID),titanmb3)</visible>
				</control>
				
				<control type="button" id="306"> <!--edit thumbnail-->
					<width>465</width>
					<align>center</align>
					<onclick>noop</onclick>
					<label>31011</label>
					<visible>StringCompare(Window.Property(groupname),mainmenu)</visible>
				</control>
				
				<control type="button" id="309"> <!--widget-->
					<width>465</width>
					<align>center</align>
					<onclick>SetProperty(shortcutDialog, widget, Home)</onclick>
					<label>$ADDON[script.skinshortcuts 32044]</label>
					<visible>StringCompare(Window.Property(groupname),mainmenu)</visible>
				</control>
				
				<control type="button" id="310"> <!--background-->
					<width>465</width>
					<align>center</align>
					<onclick>SetProperty(shortcutDialog, background, Home)</onclick>
					<label>31169</label>
					<visible>StringCompare(Window.Property(groupname),mainmenu) + Skin.HasSetting(UseSectionBackground)</visible>
				</control>
				
				<control type="button" id="1310"> <!--background-->
					<width>465</width>
					<align>center</align>
					<onclick>Notification(Section backgrounds are disabled, please enable section backgrounds to set custom backgrounds for tiles) </onclick>
					<label>31169</label>
					<visible>StringCompare(Window.Property(groupname),mainmenu) + !Skin.HasSetting(UseSectionBackground)</visible>
				</control>

				<control type="button" id="405"> <!--sub menu-->
					<width>465</width>
					<align>center</align>
					<onclick>noop</onclick>
					<label>$ADDON[script.skinshortcuts 32072]</label>
					<visible>StringCompare(Window.Property(groupname),mainmenu)</visible>
				</control>
				
				<control type="button" id="307"> <!--edit action-->
					<width>465</width>
					<align>center</align>
					<onclick>noop</onclick>
					<label>$ADDON[script.skinshortcuts 32027]</label>
					<visible>false</visible>
				</control>
						
				<control type="button" id="1401"> <!--edit shortcut-->
					<width>465</width>
					<align>center</align>
					<onclick>Control.SetFocus(4)</onclick>
					<onclick>SetProperty(shortcutDialog, change, Home)</onclick>
					<label>31175</label>
					<visible>!SubString(Container(211).ListItem.Property(labelID),titanmb3)</visible>
				</control>
				
				<control type="button" id="1308"> <!--reset-->
					<width>465</width>
					<align>center</align>
					<onclick>Dialog.Close(all, true)</onclick>
					<onclick>RunScript(script.skinshortcuts,type=resetall)</onclick>
					<label>$ADDON[script.skinshortcuts 32028]</label>
					<visible>StringCompare(Window.Property(groupname),mainmenu)</visible>
				</control>

				<control type="button" id="404"> <!--hidden button for properties-->
					<width>465</width>
					<align>center</align>
					<onclick>noop</onclick>
					<visible>false</visible>
				</control>
				
			</control>

		
		</control>
		
		<control type="group">
        <!--Dialog Overlay-->
        <include>GlobalBackground</include>
		<include>DialogOverlay</include>
		<visible>Control.HasFocus(4) | Control.HasFocus(5) | Control.HasFocus(6)</visible>
        <control type="group">
            <include>animation_dialog</include>
            <control type="group">
                <posx>590</posx>
                <posy>460</posy>
                <control type="image">
                    <posx>-650</posx>
                    <posy>-220</posy>
                    <width>2050</width>
                    <height>480</height>
                    <texture border="39">views/filemanager_panel1.png</texture>
                </control>
				<!-- change shortcut -->
                <control type="button" id="4">
                    <posx>-230</posx>
                    <posy>65</posy>
                    <width>400</width>
                    <height>60</height>
					<onback>Control.SetFocus(1401)</onback>
                    <onright>5</onright>
					<onclick>Control.SetFocus(1401)</onclick>
					<onclick>SendClick(401)</onclick>
                    <label>$ADDON[script.skinshortcuts 32048]</label>
                </control>
				<!-- custom action -->
                <control type="button" id="5">
                    <posx>190</posx>
                    <posy>65</posy>
                    <width>400</width>
                    <height>60</height>
                    <onleft>4</onleft>
					<onright>6</onright>
					<onclick>Control.SetFocus(1401)</onclick>
                    <onclick>SendClick(307)</onclick>
					<onback>Control.SetFocus(1401)</onback>
                    <label>$ADDON[script.skinshortcuts 32027]</label>
                </control>
				<!-- cancel -->
                <control type="button" id="6">
                    <posx>610</posx>
                    <posy>65</posy>
                    <width>400</width>
                    <height>60</height>
                    <onleft>5</onleft>
                    <onback>Control.SetFocus(1401)</onback>
					<onclick>Control.SetFocus(1401)</onclick>
                    <label>222</label>
                </control>
            </control>
            <control type="label" id="1">
                <description>Dialog Header</description>
                <posx>100</posx>
                <posy>320</posy>
                <width>1720</width>
                <align>center</align>
                <aligny>top</aligny>
                <include>DialogHeader</include>
				<label>31175</label>
                <!--Doubles Line-->
            </control>
            <control type="label" id="2">
                <description>Line 1</description>
                <posx>100</posx>
                <posy>380</posy>
                <width>1720</width>
                <align>center</align>
                <aligny>top</aligny>
                <label>31176</label>
                <font>Reg26</font>
            </control>
        </control>
    </control>
		
	</controls>
	
</window>
