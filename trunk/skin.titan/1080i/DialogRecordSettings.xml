                <posy>180</posy>
                <width>80</width>
                <height>60</height>
                <texture>dialogs/default/arrow.png</texture>
            </control>
            <control type="image">
                <posx>526</posx>
                <posy>200</posy>
                <width>868</width>
                <height>570</height>
