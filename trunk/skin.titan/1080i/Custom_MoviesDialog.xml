                        <posy>0</posy>
                        <height>60</height>
                        <width>600</width>
                        <texture>common/button-nf.png</texture>
                    </control>
                    <control type="label">
                        <posx>50</posx>
                        <width>600</width>
                        <height>60</height>
                        <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="60">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <height>60</height>
                        <width>600</width>
                        <texture>common/button-fo.png</texture>
                    </control>
                    <control type="label">
                        <posx>50</posx>
                        <width>600</width>
                        <height>60</height>
                        <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
