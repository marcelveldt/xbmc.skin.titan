<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="1237" type="dialog">
    <defaultcontrol>1239</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <coordinates>
        <system>1</system>
        <posx>660</posx>
        <posy>240</posy>
    </coordinates>
    <controls>
        <control type="group">
            <include>animation_dialog</include>
            <control type="image">
                <width>600</width>
                <height>600</height>
                <texture border="39">dialogs/default/bg.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <include>animation_fade_open_close</include>
                <animation effect="fade" time="600">WindowOpen</animation>
                <animation effect="fade" time="600">WindowClose</animation>
                <posx>65</posx>
                <posy>50</posy>
                <height>64</height>
                <width>64</width>
                <aligny>center</aligny>
                <colordiffuse>white</colordiffuse>
                <texture>icons/icon_movies.png</texture>
            </control>
            <control type="label" id="1238">
                <description>header label</description>
                <posx>0</posx>
                <posy>50</posy>
                <width>600</width>
                <align>center</align>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <font>Bold32</font>
                <label>[UPPERCASE]$LOCALIZE[342][/UPPERCASE]</label>
            </control>
