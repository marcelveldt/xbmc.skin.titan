<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="20">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	<views>50,57,501</views>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
		<control type="image">
            <include>DimensionsFullscreen</include>
            <fadetime>1000</fadetime>
            <colordiffuse>FF666666</colordiffuse>
            <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
			<visible>Skin.HasSetting(ItemFanartBg)</visible>
        </control>
        <!--Time & Weather-->
        <include>TimeInfo</include>
        <!-- Header -->
        <include>Header</include>
		<!-- Now playing -->
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
        <!--Hidden Button-->
        <control type="radiobutton" id="19">
            <description>Filter (hidden)</description>
            <include>HiddenButton</include>
        </control>
        <!--Views-->
        <include>View_50_List</include>
        <include>BannerView</include>
		<include>View_57_BigPanel</include>
        <!--Sub Menu Tab Left-->
        <include>SubMenuTabLeft</include>
        <!--Sub Menu Tab Top-->
        <include>SubMenuTabTop</include>
        <!--Sub Menu-->
        <control type="group">
            <posx>-608</posx>
            <posy>150</posy>
            <visible>!Window.IsActive(DialogKeyboard.xml)</visible>
            <include>animation_fade_visible_hidden</include>
            <include>animation_fade_open_close</include>
            <include>animation_sub_menu</include>
            <!--Panel-->
            <control type="image">
                <posx>-19</posx>
                <posy>360</posy>
                <width>80</width>
                <height>60</height>
                <texture>dialogs/default/arrow.png</texture>
				<visible>skin.hastheme(classic)</visible>
            </control>
            <control type="image">
                <width>500</width>
                <height>800</height>
                <texture border="39">dialogs/default/bg.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <!--Gouplist 9000-->
            <control type="grouplist" id="9000">
                <posx>21</posx>
                <posy>70</posy>
                <width>458</width>
                <height>565</height>
                <itemgap>3</itemgap>
                <onleft>50</onleft>
                <onright>50</onright>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <orientation>vertical</orientation>
                <!--Buttons-->
                <control type="label" id="200">
                    <!--Label Menu-->
                    <width>458</width>
                    <align>left</align>
                    <textoffsetx>50</textoffsetx>
                    <font>Bold40</font>
                    <textcolor>$VAR[ThemeFontColorBlack]</textcolor>
                    <label>$LOCALIZE[33061]:</label>
                </control>
                <control type="image" id="201">
                    <!--Seperator-->
                    <width>458</width>
                    <height>20</height>
                    <align>left</align>
                    <texture>common/menu-separator.png</texture>
                </control>
                <control type="button" id="3">
                    <!--Sort-->
                    <include>SubMenuButton</include>
                </control>
                <control type="togglebutton" id="4">
                    <!--Ascending-->
                    <include>SubMenuButton</include>
                    <label>584</label>
                    <altlabel>585</altlabel>
                </control>
                <control type="button" id="400">
                    <!--Set View-->
                    <include>SubMenuButton</include>
                    <label>View: $INFO[Container.Viewmode]</label>
                    <onclick>Container.NextViewMode</onclick>
				</control>
				<control type="radiobutton" id="401">
                    <!--live picture bg-->
                    <include>SubMenuButton</include>
                    <label>31132</label>
					<onclick>Skin.ToggleSetting(ItemFanartBg)</onclick>
					<selected>Skin.HasSetting(ItemFanartBg)</selected>
                </control>
				<control type="radiobutton" id="6">
                    <!--No notifications-->
                    <include>SubMenuButton</include>
                    <label>25000</label>
                </control>
				<control type="radiobutton" id="5">
                    <!--Updatebutton Gotham-->
                    <include>SubMenuButton</include>
                    <label>24063</label>
					<visible>!SubString(System.BuildVersion,14,left)</visible>
                </control>
				<control type="button" id="5">
                    <!--Updatebutton Helix-->
                    <include>SubMenuButton</include>
                    <label>24063</label>
					<visible>SubString(System.BuildVersion,14,left)</visible>
                </control>
            </control>
        </control>
    </controls>
</window>