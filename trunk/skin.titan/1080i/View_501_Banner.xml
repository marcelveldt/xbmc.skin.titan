<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="BannerView">
		<control type="group">
		<defaultcontrol always="true">501</defaultcontrol>
		    <visible>Control.IsVisible(501)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
			<control type="panel" id="501">
				<include>animation_home</include>
				<posx>50</posx>
				<width>1810</width>
				<height>900</height>
				<posy>230</posy>
				<onup>9000</onup>
				<ondown>noop</ondown>
				<onleft>501</onleft>
				<onright>501</onright>
				<pagecontrol>64</pagecontrol>
				<viewtype label="Landscape">bigwrap</viewtype>
				<orientation>horizontal</orientation>
				<focusposition>-</focusposition>
				<scrolltime tween="cubic" easing="inout">500</scrolltime>
				<!-- normal item layout -->
				<itemlayout width="620" height="350" condition="!Container.Content(Episodes)">
					<include>BannerViewImagesNormal</include>
				</itemlayout>
				<!-- item layout for episodes -->
				<itemlayout width="462" height="320" condition="Container.Content(Episodes)">
					<control type="group">
						<posy>80</posy>
						<include>BannerViewImagesEpisodes</include>
					</control>
				</itemlayout>
				<!-- normal focussed layout -->
				<focusedlayout width="620" height="350" condition="!Container.Content(Episodes)">
					<control type="group">
						<include>BannerViewImagesNormal</include>
						<include>BannerViewOverlayFocusNormal</include>
					</control>
				</focusedlayout>
				<!-- focussed layout for episodes -->
				<focusedlayout width="462" height="320" condition="Container.Content(Episodes)">
					<control type="group">
						<posy>80</posy>
						<include>BannerViewImagesEpisodes</include>
						<include>BannerViewOverlayFocusEpisodes</include>
					</control>
				</focusedlayout>
			</control>
			<!-- footer -->
			<control type="group">
				<visible>Control.IsVisible(501)</visible>
				<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
				<include condition="!skin.hassetting(nofooterbar)">Footer</include>
			</control>
			<!--Scollbar-->
			<control type="group">
            <visible>Control.IsVisible(501)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
            <visible>IntegerGreaterThan(Container(501).NumItems,30)</visible>
            <visible>!Container.Content(songs)</visible>
            <control type="image">
                <!--Scrolling Letter Background-->
                <visible>Container(501).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <texture>common/scrollbar-letter.png</texture>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
            <control type="label">
                <!--Scrolling Letter-->
                <visible>Container(501).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>Bold38</font>
                <textcolor>mainblue</textcolor>
                <label>$INFO[ListItem.SortLetter]</label>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
        </control>
		</control>
	</include>
</includes>