<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="BannerView">
        <control type="panel" id="501">
            <include>animation_home</include>
            <posx>55</posx>
            <width>1800</width>
            <height>900</height>
            <posy>170</posy>
            <onup>9000</onup>
            <ondown>noop</ondown>
            <onleft>501</onleft>
            <onright>501</onright>
            <viewtype label="Titan Banner">bigwrap</viewtype>
            <orientation>horizontal</orientation>
            <focusposition>-</focusposition>
            <scrolltime tween="cubic" easing="inout">500</scrolltime>
            <!-- normal item layout -->
            <itemlayout width="620" height="380" condition="!Container.Content(Episodes)">
                <include>BannerViewImagesNormal</include>
            </itemlayout>
            <!-- item layout for episodes -->
            <itemlayout width="450" height="320" condition="Container.Content(Episodes)">
                <control type="group">
                    <posy>80</posy>
                    <include>BannerViewImagesEpisodes</include>
                </control>
            </itemlayout>
            <!-- normal focussed layout -->
            <focusedlayout width="620" height="380" condition="!Container.Content(Episodes)">
                <control type="group">
                    <include>BannerViewImagesNormal</include>
                    <include>BannerViewOverlayFocusNormal</include>
                </control>
            </focusedlayout>
            <!-- focussed layout for episodes -->
            <focusedlayout width="450" height="320" condition="Container.Content(Episodes)">
                <control type="group">
                    <posy>80</posy>
                    <include>BannerViewImagesEpisodes</include>
                    <include>BannerViewOverlayFocusEpisodes</include>
                </control>
            </focusedlayout>
        </control>
        <!-- footer -->
        <control type="group">
            <visible>Control.IsVisible(501)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>ViewsFooter</include>
        </control>
    </include>
</includes>