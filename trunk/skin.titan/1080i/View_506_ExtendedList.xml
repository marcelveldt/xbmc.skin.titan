<?xml version="1.0" encoding="UTF-8"?>

<includes>

	<include name="ViewExtendedList">
	
		<control type="group">
		
			<posx>30</posx>
			<posy>140</posy>
		
			<visible>Control.IsVisible(506)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			
			<animation type="Visible">
				<effect type="fade" start="0" end="100" time="400"/>
				<effect type="slide" start="1920,0" end="0,0" time="600" tween="cubic" easing="out"/>
			</animation>	
		
		
			<control type="panel" id="506">
					
				<posx>0</posx>
				<posy>0</posy>
				<width>1920</width>
				<height>900</height>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onleft>506</onleft>
				<onright>506</onright>
				<viewtype label="Extended">wrap</viewtype>
				<orientation>horizontal</orientation>
				<pagecontrol>63</pagecontrol>
				<focusposition>0</focusposition>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				
				<animation type="Conditional" condition="Container.Scrolling" reversible="true">
					<effect type="fade" start="100" end="10" delay="2000" time="400" />
				</animation>

				<itemlayout width="470" height="900">
				
										<control type="group">
						<posx>0</posx>
						<posy>40</posy>
						<width>460</width>
						<height>900</height>
						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>460</width>
							<height>840</height>
							<texture border="39">dialogs/default/bg.png</texture>
						</control>
						
						<control type="image">
							<!--Panel icon image-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png" fallback="banner_default.png">$VAR[BannerLandscapeImage]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
						</control>
						<control type="image">
							<!--season image legacy-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png">$VAR[BannerLandscapeImageSeason]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
							<visible>Container.Content(Seasons) + !substring(Container.FolderPath,plugin://plugin.video)</visible>
						</control>
						
						<control type="image">
							<!--Watched Overlay-->
							<include condition="Skin.HasTheme(classic)">ExtendedViewWatchedImageSizeClassicEpisodes</include>
							<include condition="!Skin.HasTheme(classic)">ExtendedViewWatchedImageSizeNormalEpisodes</include>
							<colordiffuse>ccFFFFFF</colordiffuse>
							<texture>$VAR[WatchedImage]</texture>
							<visible>!Skin.HasSetting(HideWatchedOverlayExtended)</visible>
						</control>
						<control type="label">
							<!--watched label-->
							<include condition="!Skin.HasTheme(classic)">ExtendedViewWatchedLabelNormalEpisodes</include>
							<include condition="Skin.HasTheme(classic)">ExtendedViewWatchedLabelClassicEpisodes</include>
							<align>center</align>
							<label>$VAR[WatchedLabel]</label>
							<textcolor>white</textcolor>
							<visible>!Skin.HasSetting(HideWatchedOverlayExtended)</visible>
						</control>
					
						<control type="textbox">
							<posx>30</posx>
							<posy>280</posy>
							<width>400</width>
							<height>140</height>
							<label>$VAR[View_Item_Header]</label>
							<font>Bold40</font>
							<textcolor>white</textcolor>
							<aligny>top</aligny>
						</control>
						
						<control type="image">
							<posx>30</posx>
							<posy>390</posy>
							<width>160</width>
							<valign>top</valign>
							<height>35</height>
							<texture background="true">$INFO[ListItem.StarRating]</texture>
							<colordiffuse>white</colordiffuse>
							<aspectratio>scale</aspectratio>
						</control>
						
						<control type="textbox">
							<posx>30</posx>
							<posy>440</posy>
							<width>410</width>
							<height>305</height>
							<label>$VAR[View_Item_Description]</label>
							<font>Reg24</font>
							<textcolor>white</textcolor>
							<aligny>top</aligny>
							<autoscroll>false</autoscroll>
						</control>
						
						<control type="group">
						<posy>760</posy>
						<posx>30</posx>
						<visible>Container.Content(Movies) | Container.Content(Episodes)</visible>
						<include>movieflagssmall</include>
						</control>
					</control>
				</itemlayout>

				<focusedlayout width="470" height="900">
				
					<control type="group">
						<posx>0</posx>
						<posy>40</posy>
						<width>460</width>
						<height>900</height>
						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>460</width>
							<height>840</height>
							<texture border="39">dialogs/default/bg.png</texture>
							<colordiffuse>mainblue</colordiffuse>
						</control>
						
						<control type="image">
							<!--Panel icon image-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png" fallback="banner_default.png">$VAR[BannerLandscapeImage]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
						</control>
						<control type="image">
							<!--season image legacy-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png">$VAR[BannerLandscapeImageSeason]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
							<visible>Container.Content(Seasons) + !substring(Container.FolderPath,plugin://plugin.video)</visible>
						</control>
						
						<control type="image">
							<!--Watched Overlay-->
							<include condition="Skin.HasTheme(classic)">ExtendedViewWatchedImageSizeClassicEpisodes</include>
							<include condition="!Skin.HasTheme(classic)">ExtendedViewWatchedImageSizeNormalEpisodes</include>
							<colordiffuse>ccFFFFFF</colordiffuse>
							<texture>$VAR[WatchedImage]</texture>
							<visible>!Skin.HasSetting(HideWatchedOverlayExtended)</visible>
						</control>
						<control type="label">
							<!--watched label-->
							<include condition="!Skin.HasTheme(classic)">ExtendedViewWatchedLabelNormalEpisodes</include>
							<include condition="Skin.HasTheme(classic)">ExtendedViewWatchedLabelClassicEpisodes</include>
							<align>center</align>
							<label>$VAR[WatchedLabel]</label>
							<textcolor>white</textcolor>
							<visible>!Skin.HasSetting(HideWatchedOverlayExtended)</visible>
						</control>
					
						<control type="textbox">
							<posx>30</posx>
							<posy>280</posy>
							<width>400</width>
							<height>140</height>
							<label>$VAR[View_Item_Header]</label>
							<font>Bold40</font>
							<textcolor>white</textcolor>
							<aligny>top</aligny>
						</control>
						
						<control type="image">
							<posx>30</posx>
							<posy>390</posy>
							<width>160</width>
							<valign>top</valign>
							<height>35</height>
							<texture background="true">$INFO[ListItem.StarRating]</texture>
							<colordiffuse>white</colordiffuse>
							<aspectratio>scale</aspectratio>
						</control>
						
						<control type="textbox">
							<posx>30</posx>
							<posy>440</posy>
							<width>410</width>
							<height>305</height>
							<label>$VAR[View_Item_Description]</label>
							<font>Reg24</font>
							<textcolor>white</textcolor>
							<aligny>top</aligny>
						</control>
						
						<control type="group">
						<posy>760</posy>
						<posx>30</posx>
						<include>movieflagssmall</include>
						<visible>Container.Content(Movies) | Container.Content(Episodes)</visible>
						</control>
    
					
					</control>	
					
				</focusedlayout>

			</control>
		</control>
		
		<!--Scollbar-->
        <control type="group">
            <visible>Control.IsVisible(506)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
            <visible>IntegerGreaterThan(Container(506).NumItems,30)</visible>
            <visible>!Container.Content(songs)</visible>
            <control type="scrollbar" id="63">
                <!--Scrollbar ID60-->
                <visible>IntegerGreaterThan(Container(506).NumItems,30)</visible>
                <visible>!Container.Content(songs)</visible>
                <posx>60</posx>
				<width>1800</width>
                <posy>1040</posy>
                <height>15</height>
                <onup>506</onup>
                <onright>noop</onright>
				<orientation>horizontal</orientation>
                <visible allowhiddenfocus="true">Control.HasFocus(63) | Container.Scrolling</visible>
                <animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(63) | Container.Scrolling">Conditional</animation>
            </control>
            <control type="image">
                <!--Scrolling Letter Background-->
                <visible>Container(506).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <texture>common/scrollbar-letter.png</texture>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
            <control type="label">
                <!--Scrolling Letter-->
                <visible>Container(506).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>Bold38</font>
                <textcolor>mainblue</textcolor>
                <label>$INFO[ListItem.SortLetter]</label>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
        </control>
		
	</include>

</includes>
