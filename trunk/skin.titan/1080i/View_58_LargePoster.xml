<!--Titan-->
<includes>

	<include name="WatchedImageSizeNormalLargePoster">
        <posx>379</posx>
        <posy>1</posy>
        <width>100</width>
        <height>100</height>
    </include>
	<include name="WatchedImageSizeClassicLargePoster">
        <posx>385</posx>
        <posy>15</posy>
        <width>80</width>
        <height>80</height>
    </include>
	<include name="WatchedLabelNormalLargePoster">
        <include condition="!SubString(System.BuildVersion,14,left)">WatchedLabelNormalLargePosterPosGotham</include>
		<include condition="SubString(System.BuildVersion,14,left)">WatchedLabelNormalLargePosterPosHelix</include>
        <posy>5</posy>
        <width>60</width>
        <height>40</height>
