    <include name="View_58_LargePoster">
        <!--Panel-->
        <control type="group">
            <visible>Control.IsVisible(58)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
			
			<control type="image">
                <visible>Control.IsVisible(58) + !IsEmpty(ListItem.Label)</visible>
                <posx>8</posx>
                <posy>673</posy>
                <width>1902</width>
                <height>340</height>
                <texture>views/filemanager_panel1.png</texture>
				<visible>skin.hastheme(classic)</visible>
            </control>
			<control type="image">
                <visible>Control.IsVisible(58) + !IsEmpty(ListItem.Label)</visible>
                <posx>-60</posx>
                <posy>668</posy>
                <width>2100</width>
                <height>340</height>
                <texture>views/filemanager_panel1.png</texture>
				<visible>!skin.hastheme(classic)</visible>
            </control>
			
			<!--Footer-->
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
        <!--Poster,Cover,Thumb-->
        <control type="group">
			
            <visible>Control.IsVisible(58)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <!--no hide at addons-->
            <animation effect="fade" start="0" end="100" tween="sine" easing="inout" time="1000" delay="400" reversible="false">WindowOpen</animation>
            <animation type="WindowClose" reversible="false">
                <effect type="slide" start="0" end="0" tween="cubic" easing="out" time="750" />
                <effect type="fade" start="100" end="0" tween="sine" easing="out" time="300" />
                <effect type="zoom" start="100" end="85" center="980,550" tween="sine" easing="out" time="750" />
            </animation>
            <include>animation_view_change</include>
        </control>
        <!--View 50-->
        <control type="group">
            <visible>Control.IsVisible(58)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <!-- ID="52" -->
            <control type="panel" id="58">
                <posx>1340</posx>
                <posy>342</posy>
                <width>500</width>
                <height>720</height>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onleft>58</onleft>
                <onright>58</onright>
                <viewtype label="Large Poster">biglist</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>

                <itemlayout height="800" width="500" condition="[container.content(MusicVideos) | Container.Content(tvshows)] | Container.Content(Movies) | container.content(seasons)]">
                    <control type="image">
						<!--Poster-->
						<width>480</width>
						<height>706</height>
						<texture background="true" diffuse="poster_matte.png" fallback="poster_default.png">$VAR[PosterThumb]</texture>
						<aspectratio align="center" aligny="center">stretch</aspectratio>
					</control>
					<control type="image">
						<!--Watched Overlay-->
						<include condition="Skin.HasTheme(classic)">WatchedImageSizeClassicLargePoster</include>
						<include condition="!Skin.HasTheme(classic)">WatchedImageSizeNormalLargePoster</include>
						<colordiffuse>ccFFFFFF</colordiffuse>
						<texture>$VAR[WatchedImage]</texture>
						<visible>!Skin.HasSetting(HideWatchedOverlayLargePoster)</visible>
					</control>
					<control type="label">
						<!--watched label-->
						<include condition="!Skin.HasTheme(classic)">WatchedLabelNormalLargePoster</include>
						 <include condition="Skin.HasTheme(classic)">WatchedLabelClassicLargePoster</include>
						<align>center</align>
						<label>$VAR[WatchedLabel]</label>
						<textcolor>white</textcolor>
						<visible>!Skin.HasSetting(HideWatchedOverlayLargePoster)</visible>
					</control>
                </itemlayout>
                <focusedlayout height="800" width="500" condition="[container.content(MusicVideos) | Container.Content(tvshows)] | Container.Content(Movies) | container.content(seasons)]">
					<control type="image">
						<!--Poster-->
						<width>480</width>
						<height>706</height>
						<texture background="true" diffuse="poster_matte.png" fallback="poster_default.png">$VAR[PosterThumb]</texture>
						<aspectratio align="center" aligny="center">stretch</aspectratio>
					</control>
					<control type="image">
						<!--Watched Overlay-->
						<include condition="Skin.HasTheme(classic)">WatchedImageSizeClassicLargePoster</include>
						<include condition="!Skin.HasTheme(classic)">WatchedImageSizeNormalLargePoster</include>
						<colordiffuse>ccFFFFFF</colordiffuse>
						<texture>$VAR[WatchedImage]</texture>
						<visible>!Skin.HasSetting(HideWatchedOverlayLargePoster)</visible>
					</control>
					<control type="label">
						<!--watched label-->
						<include condition="!Skin.HasTheme(classic)">WatchedLabelNormalLargePoster</include>
						 <include condition="Skin.HasTheme(classic)">WatchedLabelClassicLargePoster</include>
						<align>center</align>
						<label>$VAR[WatchedLabel]</label>
						<textcolor>white</textcolor>
						<visible>!Skin.HasSetting(HideWatchedOverlayLargePoster)</visible>
					</control>
                </focusedlayout>
            </control>
        </control>
        <!--Info-->
        <control type="grouplist">
            <!--Regie, Duration... Movies, TV-Shows, Sesaons, Music-Videos-->
            <visible>Control.IsVisible(58)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <visible>Container.Content(MusicVideos) | Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <itemgap>0</itemgap>
            <onup>500</onup>
            <ondown>500</ondown>
            <onleft>100</onleft>
            <onright>noop</onright>
            <orientation>vertical</orientation>
            <posx>100</posx>
            <posy>720</posy>
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>40</height>
                <textcolor>mainblue</textcolor>
                <label>[COLOR=mainblue]$VAR[value_ground2_label][/COLOR][COLOR=white] $VAR[value_ground2_value][/COLOR]</label>
                <visible>!IsEmpty(Control.GetLabel(5302))</visible>
            </control>
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>40</height>
                <textcolor>mainblue</textcolor>
                <label>[COLOR=mainblue]$VAR[value_ground4_label][/COLOR][COLOR=white] $VAR[value_ground4_value][/COLOR]</label>
                <visible>!IsEmpty(Control.GetLabel(5304))</visible>
            </control>
			<control type="textbox">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>125</height>
                <label>$INFO[ListItem.Plot]</label>
                <textcolor>white</textcolor>
                <align>justify</align>
                <font>Light32</font>
                <animation effect="fade" start="0" end="100" time="300" tween="sine" delay="300" easing="in">WindowOpen</animation>
                <animation effect="fade" start="100" end="0" time="300" tween="sine" delay="0" easing="in">WindowClose</animation>
                <animation effect="fade" start="0" end="100" time="300" tween="sine" delay="500" easing="in">Visible</animation>
                <animation effect="fade" start="100" end="0" time="300" tween="sine" delay="500" easing="out">Hidden</animation>
            </control>
			<control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>40</height>
                <label></label>
            </control>
			 <!--Flags-->
            <control type="group">
                <orientation>horizontal</orientation>
                <posy>60</posy>
                <posx>0</posx>
				<height>60</height>
                <!--Flags Video-->
                <visible>Container.Content(movies) | Container.Content(episodes)</visible>
                <visible>!IsEmpty(ListItem.VideoCodec)</visible>
                <include>movieflagssmall</include>
            </control>
        </control>
        
