<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_53_PanelDetails">
        <!-- movie details -->
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>MovieDetails</include>
        </control>
        <!-- Panel -->
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <!-- ID="52" -->
            <control type="panel" id="53">
                <posx>100</posx>
                <posy>610</posy>
                <width>1720</width>
                <height>350</height>
                <onup>9000</onup>
                <ondown></ondown>
                <onleft>53</onleft>
                <onright>53</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Panel details">biglist</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>6</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
                <!-- itemlayout movies -->
                <itemlayout height="380" width="217" condition="[container.content(MusicVideos) | Container.Content(tvshows)] | Container.Content(Movies) | container.content(seasons)]">
                    <include>PosterViewLayout</include>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="380" width="217" condition="[container.content(MusicVideos) | Container.Content(tvshows)] | Container.Content(Movies) | container.content(seasons)]">
                    <include>PosterViewLayoutFocus</include>
                </focusedlayout>
                <!-- itemlayout albums -->
                <itemlayout height="213" width="217" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayout</include>
                </itemlayout>
                <!-- focussed layout albums -->
                <focusedlayout height="213" width="217" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayoutFocus</include>
                </focusedlayout>
            </control>
        </control>
        <!-- footer -->
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
    </include>
</includes>