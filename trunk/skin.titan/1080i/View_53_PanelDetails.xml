<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_53_PanelDetails">
        <!-- movie details -->
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>MovieDetails</include>
        </control>
        <!-- Panel -->
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <!-- ID="52" -->
            <control type="panel" id="53">
                <posx>90</posx>
                <posy>610</posy>
                <width>1740</width>
                <height>350</height>
                <onup>9000</onup>
                <ondown></ondown>
                <onleft>53</onleft>
                <onright>53</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Panel details">biglist</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>6</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
               <!-- itemlayout movies -->
                <itemlayout height="320" width="218" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumbBG</include>
						  </control>
						  <control type="image">
						<!-- poster shadow -->
							<width>200</width>
							<height>294</height>
							<posy>310</posy>
							<colordiffuse>52FFFFFF</colordiffuse>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<texture background="true" flipy="true" diffuse="poster_matte_reflect.png">$VAR[PosterThumb]</texture>
							<visible>Control.IsVisible(53)</visible>
						</control>
						  <control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumb</include>
						  </control>
						  <include>SmallPosterViewWatchedImage</include>
					  </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="320" width="218" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<!--Poster-->
						<control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumbFO</include>
					  </control>
					 <control type="image">
						<!-- poster shadow -->
							<width>200</width>
							<height>294</height>
							<posy>310</posy>
							<colordiffuse>52FFFFFF</colordiffuse>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<texture background="true" flipy="true" diffuse="poster_matte_reflect.png">$VAR[PosterThumb]</texture>
							<visible>Control.IsVisible(53)</visible>
						</control>
					  <control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumb</include>
					  </control>
					  <include>SmallPosterViewWatchedImage</include>
				  </control>
                </focusedlayout>
                <!-- itemlayout albums -->
                <itemlayout height="290" width="290" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayout</include>
                </itemlayout>
                <!-- focussed layout albums -->
                <focusedlayout height="290" width="290" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayoutFocus</include>
                </focusedlayout>
            </control>
        </control>
		
		<!--Scollbar-->
			<control type="group">
            <visible>Control.IsVisible(53)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
            <visible>IntegerGreaterThan(Container(53).NumItems,30)</visible>
            <visible>!Container.Content(songs) + !Container.Content(seasons) + !Container.Content(episodes)</visible>
            <control type="image">
                <!--Scrolling Letter Background-->
                <visible>Container(53).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <texture>common/scrollbar-letter.png</texture>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
            <control type="label">
                <!--Scrolling Letter-->
                <visible>Container(53).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>Bold38</font>
                <textcolor>mainblue</textcolor>
                <label>$INFO[ListItem.SortLetter]</label>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
        </control>
		
        <!-- footer -->
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
    </include>
</includes>