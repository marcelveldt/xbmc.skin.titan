<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_53_PanelDetails">
        <!-- movie details -->
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>MovieDetails</include>
        </control>
        <!-- Panel -->
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <!-- ID="52" -->
            <control type="panel" id="53">
                <posx>80</posx>
                <posy>600</posy>
                <width>1760</width>
                <height>350</height>
                <onup>9000</onup>
                <ondown></ondown>
                <onleft>53</onleft>
                <onright>53</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Poster details">biglist</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
                <!-- itemlayout movies -->
                <itemlayout height="320" width="223" condition="!Container.Content(albums)">
                    <include>PosterViewLayout</include>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="320" width="223" condition="!Container.Content(albums)">
                    <include>PosterViewLayoutFocus</include>
                </focusedlayout>
                <!-- itemlayout albums -->
                <itemlayout height="290" width="223" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayout</include>
                </itemlayout>
                <!-- focussed layout albums -->
                <focusedlayout height="290" width="223" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayoutFocus</include>
                </focusedlayout>
            </control>
        </control>
        <!-- footer -->
        <control type="group">
            <visible>Control.IsVisible(53)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>ViewsFooter</include>
        </control>
    </include>
</includes>