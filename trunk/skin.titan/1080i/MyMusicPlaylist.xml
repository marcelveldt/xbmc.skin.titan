<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="500">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <views>50,52,53,57</views>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
		<!--Time & Weather-->
        <include>TimeInfo</include>
		<!--NowPlaying-->
        <include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
        <include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
        
        <!--Header-->
        <include>Header</include>
        <!--Hidden Button-->
        <control type="radiobutton" id="19">
            <description>Filter (hidden)</description>
            <include>HiddenButton</include>
        </control>
         <!--Views-->
        <include>View_50_List</include>
        <include>View_52_Panel</include>
        <include>View_53_PanelDetails</include>
		<include>View_57_BigPanel</include>
        <!--Sub Menu Tab Left-->
        <include>SubMenuTabLeft</include>
        <!--Sub Menu Tab Top-->
        <include>SubMenuTabTop</include>
        <!--Sub Menu-->
        <control type="group">
            <include condition="skin.hastheme(classic)">SideBladeClassic</include>
			<include condition="!skin.hastheme(classic)">SideBladeModern</include>
            <!--Gouplist 9000-->
            <control type="grouplist" id="9000">
                <posx>21</posx>
                <posy>70</posy>
                <width>458</width>
                <height>650</height>
                <itemgap>3</itemgap>
                <onleft>50</onleft>
                <onright>50</onright>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <orientation>vertical</orientation>
                <!--Buttons-->
                <control type="label" id="200">
                    <!--Label Menu-->
                    <width>458</width>
                    <align>left</align>
                    <textoffsetx>50</textoffsetx>
                    <font>Bold40</font>
                    <textcolor>$VAR[ThemeFontColorBlack]</textcolor>
                    <label>$LOCALIZE[33061]:</label>
                </control>
                <control type="image" id="201">
                    <!--Seperator-->
                    <width>458</width>
                    <height>20</height>
                    <align>left</align>
                    <texture>common/menu-separator.png</texture>
                </control>
                <control type="button" id="3">
                    <!--Button Sort-->
                    <include>SubMenuButton</include>
                </control>
                <control type="togglebutton" id="4">
                    <!--Button Ascending-->
                    <include>SubMenuButton</include>
                    <label>584</label>
                    <altlabel>585</altlabel>
                </control>
                <control type="radiobutton" id="20">
                    <!--Button Shuffle-->
                    <include>SubMenuButton</include>
                    <label>191</label>
                </control>
                <control type="button" id="21">
                    <!--Button Save-->
                    <include>SubMenuButton</include>
                    <label>190</label>
                </control>
                <control type="button" id="22">
                    <!--Button Clear-->
                    <include>SubMenuButton</include>
                    <label>192</label>
                </control>
                <control type="button" id="23">
                    <!--Button Play-->
                    <include>SubMenuButton</include>
                    <label>208</label>
                </control>
                <control type="image" id="203">
                    <!--Space-->
                    <width>458</width>
                    <height>20</height>
                    <align>left</align>
                    <texture>common/menu-space.png</texture>
                </control>
                <control type="button" id="400">
                    <!--Set View-->
                    <include>SubMenuButton</include>
                    <label>View: $INFO[Container.Viewmode]</label>
                    <onclick>Container.NextViewMode</onclick>
				</control>
            </control>
        </control>
    </controls>
</window>