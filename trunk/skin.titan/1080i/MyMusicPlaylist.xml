<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="500">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <views>50,57</views>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
		<!--NowPlaying-->
        <include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
        <include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
        <!--Time & Weather-->
        <include>TimeInfo</include>
        <!--Header-->
        <include>Header</include>
        <!--Hidden Button-->
        <control type="radiobutton" id="19">
            <description>Filter (hidden)</description>
            <include>HiddenButton</include>
        </control>
         <!--Views-->
        <include>View_50_List</include>
        <include>View_52_Panel</include>
        <include>View_53_PanelDetails</include>
		<include>View_57_BigPanel</include>
        <!--Sub Menu Tab Left-->
        <control type="image">
            <include>animation_fade_visible_hidden</include>
            <include>animation_fade_open_close</include>
            <posx>0</posx>
            <posy>330</posy>
            <width>64</width>
            <height>199</height>
            <texture>dialogs/default/menu-tab.png</texture>
            <animation type="Conditional" condition="ControlGroup(9000).HasFocus()">
                <effect type="fade" start="100" end="0" time="100" />
            </animation>
            <animation type="Conditional" condition="!ControlGroup(9000).HasFocus()">
                <effect type="fade" start="0" end="100" time="600" delay="600" />
            </animation>
        </control>
        <!--Sub Menu-->
        <control type="group">
            <posx>-608</posx>
            <posy>150</posy>
            <visible>!Window.IsActive(DialogKeyboard.xml)</visible>
            <include>animation_fade_visible_hidden</include>
            <include>animation_fade_open_close</include>
            <include>animation_sub_menu</include>
            <!--Panel-->
            <control type="image">
                <posx>-19</posx>
                <posy>360</posy>
                <width>80</width>
                <height>60</height>
                <texture>dialogs/default/arrow.png</texture>
				<visible>skin.hastheme(classic)</visible>
            </control>
            <control type="image">
                <width>500</width>
                <height>800</height>
                <texture border="39">dialogs/default/bg.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <!--Gouplist 9000-->
            <control type="grouplist" id="9000">
                <posx>21</posx>
                <posy>70</posy>
                <width>458</width>
                <height>650</height>
                <itemgap>3</itemgap>
                <onleft>50</onleft>
                <onright>50</onright>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <orientation>vertical</orientation>
                <!--Buttons-->
                <control type="label" id="200">
                    <!--Label Menu-->
                    <width>458</width>
                    <align>left</align>
                    <textoffsetx>50</textoffsetx>
                    <font>Bold40</font>
                    <textcolor>$VAR[ThemeFontColorBlack]</textcolor>
                    <label>$LOCALIZE[33061]:</label>
                </control>
                <control type="image" id="201">
                    <!--Seperator-->
                    <width>458</width>
                    <height>20</height>
                    <align>left</align>
                    <texture>common/menu-separator.png</texture>
                </control>
                <control type="button" id="3">
                    <!--Button Sort-->
                    <include>SubMenuButton</include>
                </control>
                <control type="togglebutton" id="4">
                    <!--Button Ascending-->
                    <include>SubMenuButton</include>
                    <label>584</label>
                    <altlabel>585</altlabel>
                </control>
                <control type="radiobutton" id="20">
                    <!--Button Shuffle-->
                    <include>SubMenuButton</include>
                    <label>191</label>
                </control>
                <control type="button" id="21">
                    <!--Button Save-->
                    <include>SubMenuButton</include>
                    <label>190</label>
                </control>
                <control type="button" id="22">
                    <!--Button Clear-->
                    <include>SubMenuButton</include>
                    <label>192</label>
                </control>
                <control type="button" id="23">
                    <!--Button Play-->
                    <include>SubMenuButton</include>
                    <label>208</label>
                </control>
                <control type="image" id="203">
                    <!--Space-->
                    <width>458</width>
                    <height>20</height>
                    <align>left</align>
                    <texture>common/menu-space.png</texture>
                </control>
                <control type="button" id="400">
                    <!--Set View-->
                    <include>SubMenuButton</include>
                    <label>View: $INFO[Container.Viewmode]</label>
                    <onclick>Container.NextViewMode</onclick>
				</control>
            </control>
        </control>
    </controls>
</window>