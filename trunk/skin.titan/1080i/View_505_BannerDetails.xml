<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="BannerViewDetails">
        <!-- movie details and footer -->
        <control type="group">
			<defaultcontrol always="true">501</defaultcontrol>
            <visible>Control.IsVisible(505)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>MovieDetails</include>
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
        
			<control type="panel" id="505">
				<include>animation_home</include>
				<posx>90</posx>
				<width>1740</width>
				<height>360</height>
				<posy>580</posy>
				<onup>9000</onup>
				<ondown>noop</ondown>
				<onleft>505</onleft>
				<onright>505</onright>
				<pagecontrol>65</pagecontrol>
				<orientation>horizontal</orientation>
				<focusposition>-</focusposition>
				<viewtype label="Landscape details">wide</viewtype>
				<scrolltime tween="cubic" easing="inout">500</scrolltime>
				<!-- normal item layout -->
				<itemlayout width="585" height="470" condition="!Container.Content(Episodes)">
					<include>BannerViewImagesNormal</include>
				</itemlayout>
				<!-- item layout for episodes -->
				<itemlayout width="435" height="320" condition="Container.Content(Episodes)">
					<control type="group">
						<posy>80</posy>
						<include>BannerViewImagesEpisodes</include>
					</control>
				</itemlayout>
				<!-- normal focussed layout -->
				<focusedlayout width="585" height="470" condition="!Container.Content(Episodes)">
					<control type="group">
						<include>BannerViewImagesNormal</include>
						<include>BannerViewOverlayFocusNormal</include>
					</control>
				</focusedlayout>
				<!-- focussed layout for episodes -->
				<focusedlayout width="435" height="320" condition="Container.Content(Episodes)">
					<control type="group">
						<posy>80</posy>
						<include>BannerViewImagesEpisodes</include>
						<include>BannerViewOverlayFocusEpisodes</include>
					</control>
				</focusedlayout>
			</control>
			<!--Scollbar-->
			<control type="group">
            <visible>Control.IsVisible(505)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
            <visible>IntegerGreaterThan(Container(505).NumItems,30)</visible>
            <visible>!Container.Content(songs)</visible>
            <control type="image">
                <!--Scrolling Letter Background-->
                <visible>Container(505).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <texture>common/scrollbar-letter.png</texture>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
            <control type="label">
                <!--Scrolling Letter-->
                <visible>Container(505).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>Bold38</font>
                <textcolor>mainblue</textcolor>
                <label>$INFO[ListItem.SortLetter]</label>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
        </control>
		</control>
	</include>
</includes>