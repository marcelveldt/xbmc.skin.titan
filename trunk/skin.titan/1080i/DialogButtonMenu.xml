<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window type="buttonMenu" id="111">
    <defaultcontrol always="true">3110</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <!--Panel-->
        <control type="image">
            <include>animation_dialog_button</include>
            <posx>0</posx>
            <posy>486</posy>
            <width>1920</width>
            <height>260</height>
            <texture>dialogs/button/panel.png</texture>
        </control>
        <!--Menu-Labels-->
        <control type="group">
            <include>animation_dialog_button</include>
            <posx>160</posx>
            <posy>584</posy>
            <control type="label">
                <!--Settings-->
                <label>5</label>
                <width>560</width>
                <height>55</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Reg42</font>
                <textcolor>white</textcolor>
                <visible>Control.HasFocus(3119)</visible>
                <animation effect="fade" time="450" delay="250">Visible</animation>
                <animation effect="fade" time="250">WindowOpen</animation>
                <animation effect="fade" time="250">WindowClose</animation>
            </control>
            <control type="label">
                <!--Quit-->
                <label>13009</label>
                <width>560</width>
                <height>55</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Reg42</font>
                <textcolor>white</textcolor>
                <visible>Control.HasFocus(3111)</visible>
                <animation effect="fade" time="450" delay="250">Visible</animation>
                <animation effect="fade" time="250">WindowOpen</animation>
                <animation effect="fade" time="250">WindowClose</animation>
            </control>
            <control type="label">
                <!--Shutdown-->
                <label>13005</label>
                <width>560</width>
                <height>55</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Reg42</font>
                <textcolor>white</textcolor>
                <visible>Control.HasFocus(3116)</visible>
                <animation effect="fade" time="450" delay="250">Visible</animation>
                <animation effect="fade" time="250">WindowOpen</animation>
                <animation effect="fade" time="250">WindowClose</animation>
            </control>
            <control type="label">
                <!--Reboot-->
                <label>13013</label>
                <width>560</width>
                <height>55</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>Reg42</font>
                <textcolor>white</textcolor>
                <visible>Control.HasFocus(3118)</visible>
                <animation effect="fade" time="450" delay="250">Visible</animation>
                <animation effect="fade" time="250">WindowOpen</animation>
                <animation effect="fade" time="250">WindowClose</animation>
            </control>
        </control>
        <!--Button Grouplist-->
        <control type="grouplist" id="3110">
            <include>animation_dialog_button</include>
            <posx>672</posx>
            <posy>580</posy>
            <width>650</width>
            <height>75</height>
            <itemgap>110</itemgap>
            <align>center</align>
            <orientation>horizontal</orientation>
            <control type="button" id="3119">
                <!--Settings-->
                <description>Settings menu</description>
                <width>64</width>
                <height>64</height>
                <font>-</font>
                <label>-</label>
                <onclick>ActivateWindow(settings)</onclick>
                <texturefocus>common/settings1.png</texturefocus>
                <texturenofocus colordiffuse="black">common/settings1.png</texturenofocus>
                <pulseonselect>yes</pulseonselect>
            </control>
            <control type="button" id="3116">
                <!--Shutdown-->
                <description>Shutdown</description>
                <posx>15</posx>
                <width>64</width>
                <height>64</height>
                <font>-</font>
                <label>-</label>
                <texturefocus>common/shutdown1.png</texturefocus>
                <texturenofocus colordiffuse="black">common/shutdown1.png</texturenofocus>
                <pulseonselect>yes</pulseonselect>
                <onclick>ShutDown()</onclick>
            </control>
            <control type="button" id="3111">
                <!--Quit-->
                <description>Exit XBMC button</description>
                <width>64</width>
                <height>64</height>
                <font>-</font>
                <label>-</label>
                <texturefocus>common/exit1.png</texturefocus>
                <texturenofocus colordiffuse="black">common/exit1.png</texturenofocus>
                <onclick>Quit()</onclick>
                <pulseonselect>yes</pulseonselect>
                <onright>3112</onright>
                <onleft>3113</onleft>
                <visible>System.ShowExitButton</visible>
            </control>
            <control type="button" id="3118">
                <!--Reboot-->
                <description>Reboot button</description>
                <width>64</width>
                <height>64</height>
                <font>-</font>
                <label>-</label>
                <onclick>XBMC.Reset()</onclick>
                <texturefocus>common/reboot1.png</texturefocus>
                <texturenofocus colordiffuse="black">common/reboot1.png</texturenofocus>
                <pulseonselect>yes</pulseonselect>
            </control>
        </control>
    </controls>
</window>