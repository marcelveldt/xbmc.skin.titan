<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--NowPlayingMusic-->
    <include name="NowPlayingMusic">
        <control type="group">
            <!--Panel-->
            <visible>Player.HasAudio</visible>
            <animation effect="fade" time="600" delay="1000" reversible="false">Visible</animation>
            <animation effect="fade" time="200" reversible="false">Hidden</animation>
            <animation effect="fade" time="600" delay="800" reversible="false">WindowOpen</animation>
            <animation effect="fade" time="200" reversible="false">WindowClose</animation>
            <visible>!Window.IsActive(Settings.xml) + !Window.IsActive(SettingsCategory.xml)  + !Window.IsActive(SettingsSystemInfo.xml) + !Window.IsActive(SkinSettings.xml)</visible>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml) + !substring(ListItem.Path,plugin)]</visible>
            <posx>650</posx>
            <posy>0</posy>
            <control type="image">
                <!--Panel-->
                <posx>0</posx>
                <posy>0</posy>
                <width>633</width>
                <height>238</height>
                <texture>dialogs/nowplaying/nowplaying_music.png</texture>
            </control>
            <control type="image">
                <!--Cover-->
                <posx>90</posx>
                <posy>44</posy>
                <width>133</width>
                <height>133</height>
                <fadetime>200</fadetime>
                <texture background="true" fallback="cover_default.png" diffuse="cover_matte_cdart.png">$INFO[MusicPlayer.Cover]</texture>
                <aspectratio align="center" aligny="top">stretch</aspectratio>
            </control>
            <control type="label">
                <!--Now Playing-->
                <posx>255</posx>
                <posy>40</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>31040</label>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>255</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg30</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[MusicPlayer.Artist] - $INFO[MusicPlayer.Title]</label>
                <visible>!IsEmpty(MusicPlayer.Artist)</visible>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>255</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg30</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Window(Home).Property(streamtitle)] - $INFO[MusicPlayer.Title]</label>
                <visible>IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Artist) + !IsEmpty(MusicPlayer.Title)</visible>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>255</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg30</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Window(Home).Property(streamtitle)]</label>
                <visible>IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Title)</visible>
            </control>
            <control type="label">
                <!--Play Time-->
                <posx>255</posx>
                <posy>125</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
                <visible>Player.HasDuration</visible>
            </control>
            <control type="label">
                <!--Play Time-->
                <posx>255</posx>
                <posy>125</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Player.Time]</label>
                <visible>IsEmpty(Player.Duration)</visible>
            </control>
            <control type="progress">
                <!--Process-->
                <posx>255</posx>
                <posy>124</posy>
                <width>285</width>
                <texturebg></texturebg>
                <midtexture border="4">osd/ProgressMidSmall.png</midtexture>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
        </control>
    </include>
    <!--NowPlayingVideo-->
    <include name="NowPlayingVideo">
        <control type="group">
            <!--Panel-->
            <visible>Player.HasVideo</visible>
            <animation effect="fade" time="600" delay="1000" reversible="false">Visible</animation>
            <animation effect="fade" time="500" reversible="false">Hidden</animation>
            <animation effect="fade" time="600" delay="1000" reversible="false">WindowOpen</animation>
            <animation effect="fade" time="200" reversible="false">WindowClose</animation>
            <visible>!Window.IsActive(Settings.xml) + !Window.IsActive(SettingsCategory.xml)  + !Window.IsActive(SettingsSystemInfo.xml) + !Window.IsActive(SkinSettings.xml)</visible>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml) + !substring(ListItem.Path,plugin)]</visible>
            <posx>590</posx>
            <posy>0</posy>
            <control type="image">
                <!--Panel-->
                <posx>0</posx>
                <posy>0</posy>
                <width>734</width>
                <height>238</height>
                <texture>dialogs/nowplaying/nowplaying_video.png</texture>
            </control>
            <control type="image">
                <!--Black Back-->
                <posx>90</posx>
                <posy>44</posy>
                <width>240</width>
                <!-- +8 -->
                <height>133</height>
                <!-- +2 -->
                <texture>common/black.png</texture>
            </control>
            <control type="label">
                <!--Now Playing-->
                <posx>355</posx>
                <posy>40</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>31040</label>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>357</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Bold34</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[VideoPlayer.Title]</label>
                <scroll>false</scroll>
            </control>
            <control type="label">
                <!--Play Time-->
                <posx>355</posx>
                <posy>125</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
            </control>
            <control type="progress">
                <!--Process-->
                <posx>357</posx>
                <posy>124</posy>
                <width>285</width>
                <texturebg></texturebg>
                <midtexture border="4">osd/ProgressMidSmall.png</midtexture>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
        </control>
        <control type="group">
            <!--Video Window-->
            <visible>Player.HasVideo</visible>
            <animation effect="slide" start="1500" end="0" time="0" delay="1500" reversible="false">WindowOpen</animation>
            <animation effect="slide" start="0" end="1500" time="0" reversible="false">WindowClose</animation>
            <animation effect="slide" start="1500" end="0" time="0" delay="1500" reversible="false">Visible</animation>
            <animation effect="slide" start="0" end="1500" time="0" reversible="false">Hidden</animation>
            <visible>!Window.IsActive(Settings.xml) + !Window.IsActive(SettingsCategory.xml)  + !Window.IsActive(SettingsSystemInfo.xml) + !Window.IsActive(SkinSettings.xml)</visible>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml) + !substring(ListItem.Path,plugin)]</visible>
            <posx>590</posx>
            <posy>0</posy>
            <control type="videowindow">
                <!--Video Window-->
                <posx>94</posx>
                <posy>45</posy>
                <width>232</width>
                <!--1,777-->
                <height>131</height>
            </control>
        </control>
    </include>
</includes>