<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--NowPlayingMusic-->
    <include name="NowPlayingMusicClassic">
        <control type="group" id="9999">
            <!--Panel-->
            <visible>Player.HasAudio</visible>
            <visible>!Window.IsActive(Settings.xml) + !Window.IsActive(SettingsCategory.xml)  + !Window.IsActive(SettingsSystemInfo.xml) + !Window.IsActive(SkinSettings.xml) + !Control.IsVisible(57)</visible>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml) + !Window.IsActive(DialogVideoInfo.xml)</visible>
            <posx>650</posx>
            <posy>0</posy>
            <control type="image">
                <!--Panel-->
                <posx>0</posx>
                <posy>0</posy>
                <width>633</width>
                <height>238</height>
                <texture>dialogs/nowplaying/nowplaying_music.png</texture>
            </control>
            <control type="image">
                <!--Cover-->
                <posx>90</posx>
                <posy>44</posy>
                <width>133</width>
                <height>133</height>
                <fadetime>200</fadetime>
                <texture background="true" fallback="cover_default.png" diffuse="cover_matte_cdart.png">$INFO[MusicPlayer.Cover]</texture>
                <aspectratio align="center" aligny="top">stretch</aspectratio>
            </control>
            <control type="label">
                <!--Now Playing-->
                <posx>255</posx>
                <posy>40</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>31040</label>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>255</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg30</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[MusicPlayer.Artist] - $INFO[MusicPlayer.Title]</label>
                <visible>!IsEmpty(MusicPlayer.Artist)</visible>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>255</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg30</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Window(Home).Property(streamtitle)] - $INFO[MusicPlayer.Title]</label>
                <visible>IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Artist) + !IsEmpty(MusicPlayer.Title)</visible>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>255</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg30</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Window(Home).Property(streamtitle)]</label>
                <visible>IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Artist) + IsEmpty(MusicPlayer.Title)</visible>
            </control>
            <control type="label">
                <!--Play Time-->
                <posx>255</posx>
                <posy>125</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
                <visible>Player.HasDuration</visible>
            </control>
            <control type="label">
                <!--Play Time-->
                <posx>255</posx>
                <posy>125</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Player.Time]</label>
                <visible>IsEmpty(Player.Duration)</visible>
            </control>
            <control type="progress">
                <!--Process-->
                <posx>255</posx>
                <posy>124</posy>
                <width>285</width>
                <texturebg></texturebg>
                <midtexture border="4">osd/ProgressMidSmall.png</midtexture>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
        </control>
    </include>
    <!--NowPlayingVideo-->
    <include name="NowPlayingVideoClassic">
        <control type="group" id="9999">
            <!--Panel-->
            <visible>Player.HasVideo</visible>
            <visible>!Window.IsActive(Settings.xml) + !Window.IsActive(SettingsCategory.xml)  + !Window.IsActive(SettingsSystemInfo.xml) + !Window.IsActive(SkinSettings.xml) + !Control.IsVisible(57)</visible>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml) + !Window.IsActive(DialogVideoInfo.xml)</visible>
            <posx>590</posx>
            <posy>0</posy>
            <control type="image">
                <!--Panel-->
                <posx>0</posx>
                <posy>0</posy>
                <width>734</width>
                <height>238</height>
                <texture>dialogs/nowplaying/nowplaying_video.png</texture>
            </control>
            <control type="image">
                <!--Black Back-->
                <posx>90</posx>
                <posy>44</posy>
                <width>240</width>
                <!-- +8 -->
                <height>133</height>
                <!-- +2 -->
                <texture>common/black.png</texture>
            </control>
            <control type="label">
                <!--Now Playing-->
                <posx>355</posx>
                <posy>40</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>31040</label>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>357</posx>
                <posy>75</posy>
                <width>285</width>
                <align>left</align>
                <font>Bold34</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[VideoPlayer.Title]</label>
                <scroll>false</scroll>
            </control>
            <control type="label">
                <!--Play Time-->
                <posx>355</posx>
                <posy>125</posy>
                <width>285</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
            </control>
            <control type="progress">
                <!--Process-->
                <posx>357</posx>
                <posy>124</posy>
                <width>285</width>
                <texturebg></texturebg>
                <midtexture border="4">osd/ProgressMidSmall.png</midtexture>
                <info>Player.Progress</info>
                <visible>true</visible>
            </control>
        </control>
        <control type="group">
            <!--Video Window-->
            <visible>Player.HasVideo</visible>
            <animation effect="slide" start="1500" end="0" time="0" delay="1500" reversible="false">WindowOpen</animation>
            <animation effect="slide" start="0" end="1500" time="0" reversible="false">WindowClose</animation>
            <animation effect="slide" start="1500" end="0" time="0" delay="1500" reversible="false">Visible</animation>
            <animation effect="slide" start="0" end="1500" time="0" reversible="false">Hidden</animation>
            <visible>!Window.IsActive(Settings.xml) + !Window.IsActive(SettingsCategory.xml)  + !Window.IsActive(SettingsSystemInfo.xml) + !Window.IsActive(SkinSettings.xml) + !Control.IsVisible(57)</visible>
            <visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml) + !substring(ListItem.Path,plugin)]</visible>
            <posx>590</posx>
            <posy>0</posy>
            <control type="videowindow">
                <!--Video Window-->
                <posx>94</posx>
                <posy>45</posy>
                <width>232</width>
                <!--1,777-->
                <height>131</height>
            </control>
        </control>
    </include>

	<include name="NowPlayingModern">
		<include>nowplayingbackground</include>
        <control type="group" id="88888">
            <!--Panel-->
            <visible>!IsEmpty(Player.Title) + Player.HasMedia + !Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml) + !ControlGroup(400).HasFocus() + ![!IsEmpty(Container(300).ListItem.property(widget)) + Skin.HasSetting(AutoShowWidgets)] + !ControlGroup(77777).HasFocus</visible>
            <include>DimensionsFullscreen</include>
			<animation effect="slide" start="0,-400" end="0,0" tween="cubic" easing="out" delay="0" time="450" reversible="false">Visible</animation>
			<animation effect="slide" start="0,0" end="0,-400" tween="cubic" easing="out" delay="0" time="450" reversible="false">Hidden</animation>
            <control type="image">
				<posx>-60</posx>
				<posy>-20</posy>
				<width>2040</width>
				<height>180</height>
				<texture background="true">views/filemanager_panel1.png</texture>
			</control>
			<include>TimeInfoAlt</include>
            <control type="fadelabel">
                <!--Now Playing-->
                <posx>310</posx>
                <posy>15</posy>
                <width>885</width>
                <align>left</align>
                <font>Reg28</font>
                <textcolor>white</textcolor>
                <label>$VAR[NowPlayingLabel]</label>
            </control>
            <control type="fadelabel">
                <!--Title-->
                <posx>310</posx>
                <posy>70</posy>
                <width>1100</width>
                <align>left</align>
                <font>Bold45</font>
                <textcolor>white</textcolor>
                <label>$VAR[NowPlayingTitle]</label>
                <scroll>false</scroll>
            </control>
			<!-- cd cover -->
			<control type="image">
				<posx>140</posx>
				<posy>10</posy>
				<width>123</width>
				<height>123</height>
				<aligny>center</aligny>
				<aspectratio align="left">keep</aspectratio>
				<fadetime>300</fadetime>
				<animation effect="rotate" end="-360" center="auto" time="4800" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<texture background="true" fallback="defaultcovers/cd.png">$INFO[Player.FolderPath]cdart.png</texture>
				<visible>Player.HasAudio</visible>
			</control>
			<control type="image">
				<!--music cover-->
				<posx>90</posx>
                <posy>10</posy>
				<width>123</width>
				<height>123</height>
				<fadetime>200</fadetime>
				<texture background="true" diffuse="matte_cdart.png" fallback="defaultcovers/musicsongs.png">$INFO[Player.Art(thumb)]</texture>
				<aspectratio align="left" aligny="top">stretch</aspectratio>
				<visible>Player.HasAudio</visible>
			</control>
			<control type="image">
				<!--Cover for all other-->
				<posx>60</posx>
                <posy>20</posy>
				<width>200</width>
				<height>110</height>
				<fadetime>200</fadetime>
				<texture background="true">$VAR[VideoPlayerCover]</texture>
				<aspectratio align="left" aligny="top">keep</aspectratio>
				<visible>Player.HasVideo</visible>
			</control>
        </control>
        
    </include>
	
	
	<include name="nowplayingbackground">
		<control type="group">
		<visible>!Skin.HasSetting(DisableNowPlayingBackground) + Player.HasMedia</visible>
			<!-- artist slideshow -->
			<control type="multiimage">
				<aspectratio>scale</aspectratio>
				<include>DimensionsFullscreen</include>
				<timeperimage>10000</timeperimage>
				<randomize>true</randomize>
				<fadetime>600</fadetime>
				<loop>yes</loop>
				<imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
				<animation effect="fade" start="100" end="65" time="0"></animation>
				<animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="sine" easing="inout" pulse="true"></animation>
				<animation effect="slide" start="-30,-30" end="30,30" time="6000" tween="sine" easing="inout" pulse="true"></animation>
				<visible>Player.HasAudio + !IsEmpty(MusicPlayer.Title) + System.HasAddon(script.artistslideshow)</visible>
			</control>
			<control type="visualisation" id="2">
				<description>visualisation</description>
				<include>DimensionsFullscreen</include>
			</control>
			<control type="videowindow">
				<include>DimensionsFullscreen</include>
				<visible>Player.HasVideo</visible>
			</control>
			<!--Dialog Overlay-->
			<control type="group">
				<visible>Player.HasVideo | [Player.HasAudio + [!IsEmpty(Visualisation.Name) | !IsEmpty(Window.Property(ArtistSlideshow.ArtistBiography))]]</visible>
				<include>DialogOverlay</include>
			</control>
		</control>


	</include>
	
	</includes>