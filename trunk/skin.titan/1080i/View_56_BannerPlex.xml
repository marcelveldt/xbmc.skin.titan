<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_56_BannerPlex">
        <!--Panel-->
        <control type="group">
            <visible>Control.IsVisible(56)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <!-- ID="52" -->
            <control type="panel" id="56">
                <posx>60</posx>
                <posy>340</posy>
                <width>1860</width>
                <height>570</height>
                <onup>56</onup>
                <ondown>56</ondown>
                <onleft>9000</onleft>
                <onright>56</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Banner list">bigwide</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
                <itemlayout height="145" width="610" condition="!Container.Content(albums)">
					<control type="group">
						<posy>10</posy>
						<posx>10</posx>
						<include>BannerPlexlayout</include>
					</control>
                </itemlayout>
                <focusedlayout height="145" width="610" condition="!Container.Content(albums)">
                    <control type="group">
						<posy>10</posy>
						<posx>10</posx>
                        <animation type="focus">
                            <effect type="zoom" start="100" end="110" center="305,72" time="150" />
                        </animation>
                        <animation type="unfocus">
                            <effect type="zoom" start="110" end="100" center="305,72" time="150" />
                        </animation>
						<include>BannerPlexlayout</include>
						<control type="image">
							<posx>-10</posx>
							<posy>-6</posy>
							<width>612</width>
							<height>132</height>
							<texture>home/home_focus.png</texture>
							<visible>!Skin.HasTheme(classic)</visible>
						</control>
                    </control>
                </focusedlayout>
            </control>
        </control>
        <control type="group">
            <!--Rating, Label-->
            <visible>Control.IsVisible(56)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
            <animation effect="fade" start="0" end="100" time="300" tween="sine" delay="300" easing="in">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="300" tween="sine" delay="0" easing="in">WindowClose</animation>
            <animation effect="fade" start="0" end="100" time="300" tween="sine" delay="500" easing="in">Visible</animation>
            <animation effect="fade" start="100" end="0" time="300" tween="sine" delay="500" easing="out">Hidden</animation>
            <posy>955</posy>
            <control type="image">
                <!--Stars-->
                <visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)] + !Skin.HasSetting(NoFooterBar)</visible>
                <posx>130</posx>
                <posy>13</posy>
                <width>270</width>
                <height>25</height>
                <texture>$INFO[ListItem.Rating,rating/10stars_black/,.png]</texture>
            </control>
            <control type="image">
                <!--Stars-->
                <visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)] + Skin.HasSetting(NoFooterBar)</visible>
                <posx>130</posx>
                <posy>13</posy>
                <width>270</width>
                <height>25</height>
                <texture>$INFO[ListItem.Rating,rating/10stars_blue/,.png]</texture>
            </control>
            <control type="label">
                <!--Rating-->
                <visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)</visible>
                <posx>420</posx>
                <posy>0</posy>
                <width>100</width>
                <font>Reg30</font>
                <textcolor>white</textcolor>
                <label>$INFO[ListItem.Rating]</label>
            </control>
            <control type="label">
                <!--Album, Songs-->
                <visible>Container.Content(albums) | Container.Content(songs)</visible>
                <posx>130</posx>
                <posy>0</posy>
                <width>600</width>
                <font>Reg30</font>
                <textcolor>white</textcolor>
                <label>$INFO[ListItem.Album]</label>
            </control>
        </control>
        <control type="group">
            <!--Title-->
            <visible>Control.IsVisible(56)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <posy>955</posy>
            <control type="label">
                <!--Others-->
                <visible>!Container.Content(albums) + !Container.Content(songs)</visible>
                <posx>560</posx>
                <posy>0</posy>
                <width>800</width>
                <align>center</align>
                <font>Reg30</font>
                <textcolor>white</textcolor>
                <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label">
                <!--Album, Songs-->
                <visible>Container.Content(albums) | Container.Content(songs)</visible>
                <posx>560</posx>
                <posy>0</posy>
                <width>800</width>
                <align>center</align>
                <font>Reg30</font>
                <textcolor>white</textcolor>
                <label>$INFO[ListItem.Artist]</label>
            </control>
        </control>
        <control type="group">
            <!--Page Control-->
            <visible>Control.IsVisible(56)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <posy>955</posy>
            <control type="label">
                <visible>IntegerGreaterThan(Container.NumItems, 1)</visible>
                <posx>1780</posx>
                <posy>0</posy>
                <width>400</width>
                <align>right</align>
                <font>Reg30</font>
                <textcolor>white</textcolor>
                <label>$INFO[Container.NumItems] $LOCALIZE[31034]</label>
            </control>
        </control>
        <control type="grouplist">
            <control type="label" id="5101">
                <include>HiddenButton</include>
                <label>$VAR[value_list_label_2]</label>
            </control>
            <control type="label" id="5201">
                <include>HiddenButton</include>
                <label>$VAR[value_ground1_label]</label>
            </control>
            <control type="label" id="5202">
                <include>HiddenButton</include>
                <label>$VAR[value_ground2_label]</label>
            </control>
            <control type="label" id="5203">
                <include>HiddenButton</include>
                <label>$VAR[value_ground3_label]</label>
            </control>
            <control type="label" id="5204">
                <include>HiddenButton</include>
                <label>$VAR[value_ground4_label]</label>
            </control>
            <control type="label" id="5301">
                <include>HiddenButton</include>
                <label>$VAR[value_ground1_value]</label>
            </control>
            <control type="label" id="5302">
                <include>HiddenButton</include>
                <label>$VAR[value_ground2_value]</label>
            </control>
            <control type="label" id="5303">
                <include>HiddenButton</include>
                <label>$VAR[value_ground3_value]</label>
            </control>
            <control type="label" id="5304">
                <include>HiddenButton</include>
                <label>$VAR[value_ground4_value]</label>
            </control>
        </control>
        <!--Scollbar-->
        <control type="group">
            <visible>Control.IsVisible(56)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
            <visible>IntegerGreaterThan(Container(56).NumItems,30)</visible>
            <visible>!Container.Content(songs)</visible>
            <control type="scrollbar" id="60">
                <!--Scrollbar ID60-->
                <visible>IntegerGreaterThan(Container(56).NumItems,30)</visible>
                <visible>!Container.Content(songs)</visible>
                <posx>60</posx>
				<width>1800</width>
                <posy>940</posy>
                <height>15</height>
                <onup>56</onup>
                <onright>noop</onright>
				<orientation>horizontal</orientation>
                <visible allowhiddenfocus="true">Control.HasFocus(60) | Container.Scrolling</visible>
                <animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Container.Scrolling">Conditional</animation>
            </control>
            <control type="image">
                <!--Scrolling Letter Background-->
                <visible>Container(56).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <texture>common/scrollbar-letter.png</texture>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
            <control type="label">
                <!--Scrolling Letter-->
                <visible>Container(56).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>Bold38</font>
                <textcolor>mainblue</textcolor>
                <label>$INFO[ListItem.SortLetter]</label>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
        </control>
    </include>
</includes>