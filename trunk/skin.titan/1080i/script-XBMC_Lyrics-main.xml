<?xml version="1.0" encoding="UTF-8"?>
<window>
    <allowoverlay>yes</allowoverlay>
    <controls>
        <control type="group">
            <posx>0</posx>
            <posy>0</posy>
            <visible>Window.IsActive(Visualisation) + Player.HasAudio + !Window.IsActive(ShutdownMenu) + Skin.HasSetting(MusicActivateLyrics)</visible>
            <visible>Control.IsVisible(110)</visible>
            <animation effect="fade" start="0" end="100" delay="300" time="200">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            <animation effect="fade" start="0" end="100" delay="300" time="200">Visible</animation>
            <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
            <!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
            <control type="label">
                <description>No lyrics found</description>
                <top>540</top>
                <width>1920</width>
                <label>$ADDON[script.cu.lrclyrics 32001]</label>
                <font>Bold55</font>
                <textcolor>white</textcolor>
                <shadowcolor>99000000</shadowcolor>
                <align>center</align>
                <scroll>true</scroll>
                <scrollspeed>20</scrollspeed>
                <visible>!Control.HasFocus(110)</visible>
            </control>
            <control type="list" id="110">
                <posx>0</posx>
                <posy>150</posy>
                <width>1920</width>
                <height>450</height>
                <onleft>noop</onleft>
                <onright>noop</onright>
                <onup>110</onup>
                <ondown>110</ondown>
                <pagecontrol>-</pagecontrol>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <itemlayout height="54">
                    <control type="label">
                        <left>960</left>
                        <width>1920</width>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>77white</textcolor>
                        <shadowcolor>99000000</shadowcolor>
                        <font>Reg50</font>
                        <aligny>center</aligny>
                        <align>center</align>
                    </control>
                </itemlayout>
                <focusedlayout height="60">
                    <control type="label">
                        <left>960</left>
                        <width>1920</width>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>77white</textcolor>
                        <shadowcolor>99000000</shadowcolor>
                        <font>Bold55</font>
                        <aligny>center</aligny>
                        <align>center</align>
                        <visible>Control.HasFocus(110)</visible>
                    </control>
                    <control type="label">
                        <left>960</left>
                        <width>1920</width>
                        <label fallback="--">$INFO[ListItem.Label]</label>
                        <visible>Control.HasFocus(110)</visible>
                        <textcolor>white</textcolor>
                        <shadowcolor>99000000</shadowcolor>
                        <font>Bold55</font>
                        <aligny>center</aligny>
                        <align>center</align>
                    </control>
                </focusedlayout>
            </control>
            <!-- ** Required ** Do not change <id> or <type> -->
            <control type="spincontrol" id="111">
                <visible>false</visible>
            </control>
            <control type="list" id="120">
                <visible>false</visible>
            </control>
            <control type="spincontrol" id="121">
                <visible>false</visible>
            </control>
            <control type="label" id="200">
                <description>Scraper label</description>
                <visible>false</visible>
            </control>
        </control>
    </controls>
</window>