<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_52_Panel">
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <!-- ID="52" -->
            <control type="panel" id="52">
                <posx>60</posx>
                <posy>300</posy>
                <width>1840</width>
                <height>640</height>
                <onup>52</onup>
                <ondown>52</ondown>
                <onleft>9000</onleft>
                <onright>52</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Panel">wide</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
                <!-- itemlayout movies -->
                <itemlayout height="320" width="230" condition="!Container.Content(albums)">
                    <include>PosterViewLayout</include>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="320" width="230" condition="!Container.Content(albums)">
                    <include>PosterViewLayoutFocus</include>
                </focusedlayout>
                <!-- itemlayout albums -->
                <itemlayout height="290" width="290" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayout</include>
                </itemlayout>
                <!-- focussed layout albums -->
                <focusedlayout height="290" width="290" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayoutFocus</include>
                </focusedlayout>
            </control>
        </control>
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>ViewsFooter</include>
        </control>
    </include>
</includes>