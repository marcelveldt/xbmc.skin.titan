<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_52_Panel">
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <!-- ID="52" -->
            <control type="panel" id="52">
                <posx>60</posx>
                <posy>320</posy>
                <width>1840</width>
                <height>640</height>
                <onup>52</onup>
                <ondown>52</ondown>
                <onleft>9000</onleft>
                <onright>52</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Panel">wide</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
                <!-- itemlayout movies -->
                <itemlayout height="320" width="227" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumbBG</include>
						  </control>
						  <control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumb</include>
						  </control>
						  <include>SmallPosterViewWatchedImage</include>
					  </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="320" width="227" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<!--Poster-->
						<animation type="focus">
							<effect type="zoom" start="100" end="105" center="auto" time="150" />
						</animation>
						<animation type="unfocus">
							<effect type="zoom" start="105" end="100" center="auto" time="150" />
						</animation>
					
						<control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumbFO</include>
					  </control>
					  <control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumb</include>
					  </control>
					  <include>SmallPosterViewWatchedImage</include>
				  </control>
                </focusedlayout>
                <!-- itemlayout albums -->
                <itemlayout height="290" width="290" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayout</include>
                </itemlayout>
                <!-- focussed layout albums -->
                <focusedlayout height="290" width="290" condition="Container.Content(albums)">
                    <include>PosterViewAlbumLayoutFocus</include>
                </focusedlayout>
            </control>
        </control>
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
    </include>
</includes>