<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="View_51_Showcase">
        <control type="group">
            <!-- Warplist ID="51"-->
            <visible>Control.IsVisible(51)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml) + IntegerGreaterThan(Container.NumItems,1)</visible>
            <include>animation_list</include>
            <posy>-100</posy>
            <control type="wraplist" id="51">
                <!--Wraplist ID 51-->
                <posx>-52</posx>
                <width>1960</width>
                <height>800</height>
                <onleft>51</onleft>
                <onright>51</onright>
                <onup>9000</onup>
                <ondown>noop</ondown>
                <viewtype label="Showcase">bigwrap</viewtype>
                <pagecontrol>60</pagecontrol>
                <orientation>horizontal</orientation>
                <scrolltime tween="cubic" easing="inout">450</scrolltime>
                <!--scrolltime>250</scrolltime-->
                <focusposition>3</focusposition>
                <itemlayout width="270" height="800">
                    <control type="group">
                        <visible>Skin.HasSetting(flattenshowcase)</visible>
                        <animation effect="fade" start="0" end="100" time="10" delay="800" reversible="false">visible</animation>
                        <animation effect="fade" start="0" end="100" time="10" delay="0" reversible="false">hidden</animation>
                        <control type="image">
                            <include>MovieShowcaseThumbMain</include>
                            <info>ListItem.Icon</info>
                        </control>
                        <control type="image">
                            <include>MovieShowcaseThumbReflection</include>
                            <info>ListItem.Icon</info>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="270" height="800">
                    <control type="group">
                        <visible>Skin.HasSetting(flattenshowcase)</visible>
                        <animation effect="fade" start="0" end="100" time="10" delay="800" reversible="false">visible</animation>
                        <animation effect="fade" start="0" end="100" time="10" delay="0" reversible="flase">hidden</animation>
                        <control type="image">
                            <include>MovieShowcaseThumbMain</include>
                            <info>ListItem.Icon</info>
                        </control>
                        <control type="image">
                            <include>MovieShowcaseThumbReflectionMain</include>
                            <info>ListItem.Icon</info>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <include>ShowcaseMovies</include>
            <!--Showcase-->
        </control>
        <!-- footer -->
        <control type="group">
            <visible>Control.IsVisible(51)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>ViewsFooter</include>
        </control>
    </include>
    <!--Includes-->
</includes>