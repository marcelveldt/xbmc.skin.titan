<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>11</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>11</views>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
		 <!--Time & Weather-->
        <include>TimeInfo</include>
		<!--NowPlaying-->
        <include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
        <include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
       
        <!--Header-->
        <include>Header</include>
        <!--Hidden-->
        <control type="label" id="29">
            <description>Empty so we can pass the values up one level</description>
            <visible>False</visible>
        </control>
        <control type="label" id="30">
            <description>Empty so we can pass the values up one level</description>
            <visible>False</visible>
        </control>
        <!--PVR Views-->
        <control type="group" id="50">
            <control type="group">
				<posy>45</posy>
				<include>PVRpanelBackground</include>
				<control type="group">
					<!--Video Window-->
					<visible>Control.IsVisible(11)</visible>
					<include>animation_view_change_pvr</include>
					<include>animation_list</include>
					<posx>105</posx>
					<posy>320</posy>
					<control type="image">
						<width>200</width>
						<height>200</height>
						<texture background="true" diffuse="home/home_matte.png" fallback="home/livetv.png">$INFO[ListItem.Icon]</texture>
						<aspectratio>scale</aspectratio>
					</control>
				</control>
				<control type="group">
					<!--Start, End, Next-->
					<visible>Control.IsVisible(11)</visible>
					<include>animation_view_change_pvr</include>
					<include>animation_list</include>
					<posx>450</posx>
					<posy>330</posy>
					<control type="group">
						<!-- Ground 1 -->
						<posy>0</posy>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>mainblue</textcolor>
							<label>$LOCALIZE[19030] :</label>
						</control>
						<control type="fadelabel">
							<posx>145</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>white</textcolor>
							<label>$INFO[Container(11).ListItem.Title]</label>
						</control>
					</control>
					<control type="group">
						<!-- Ground 2 -->
						<posy>40</posy>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>mainblue</textcolor>
							<label>$LOCALIZE[19126] :</label>
						</control>
						<control type="label">
							<posx>145</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>white</textcolor>
							<label>$INFO[Container(11).ListItem.StartTime]</label>
						</control>
					</control>
					<control type="group">
						<!-- Ground 3 -->
						<posy>80</posy>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>mainblue</textcolor>
							<label>$LOCALIZE[19127] :</label>
						</control>
						<control type="label">
							<posx>145</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>white</textcolor>
							<label>$INFO[Container(11).ListItem.EndTime]</label>
						</control>
					</control>
				</control>
				<control type="group">
					<!--Infos-->
					<visible>Control.IsVisible(11)</visible>
					<include>animation_view_change_pvr</include>
					<include>animation_list</include>
					<control type="textbox">
						<shadowcolor></shadowcolor>
						<!--Info Plot-->
						<posx>120</posx>
						<posy>560</posy>
						<width>830</width>
						<height>240</height>
						<font>Light32</font>
						<textcolor>white</textcolor>
						<autoscroll>false</autoscroll>
						<label>$INFO[ListItem.Plot]</label>
					</control>
					<control type="label">
						<!--Next Start Dat -->
						<posx>120</posx>
						<posy>810</posy>
						<width>800</width>
						<font>Reg30</font>
						<textcolor>ccmainblue</textcolor>
						<label>$INFO[Container(11).ListItem.NextStartDate]</label>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<!--Next Title-->
						<posx>120</posx>
						<posy>845</posy>
						<width>800</width>
						<font>Light28</font>
						<textcolor>mainblue</textcolor>
						<label>$LOCALIZE[19031] : $INFO[Container(11).ListItem.NextTitle] $INFO[Container(11).ListItem.NextStartTime] - $INFO[Container(11).ListItem.NextEndTime]</label>
						<scroll>false</scroll>
					</control>
				</control>
				<control type="list" id="11">
					<!--List ID=11-->
					<include>animation_view_change_pvr</include>
					<include>animation_list</include>
					<posx>0</posx>
					<posy>320</posy>
					<width>1920</width>
					<height>570</height>
					<onleft>9000</onleft>
					<onright>70</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					<viewtype label="535">list</viewtype>
					<pagecontrol>70</pagecontrol>
					<scrolltime>200</scrolltime>
					<!-- =========== -->
					<!-- x=980 w=765 -->
					<!-- =========== -->
					<itemlayout height="60" width="980">
						<control type="label">
							<!--Channel Number-->
							<posx>1030</posx>
							<posy>5</posy>
							<width>100</width>
							<height>50</height>
							<font>Reg34</font>
							<textcolor>white</textcolor>
							<selectedcolor>mainblue</selectedcolor>
							<align>left</align>
							<info>ListItem.ChannelNumber</info>
						</control>
						<control type="image">
							<!--Rec-->
							<posx>1185</posx>
							<posy>0</posy>
							<width>55</width>
							<height>55</height>
							<texture>pvr/icons/pvr_record.png</texture>
							<visible>ListItem.IsRecording</visible>
						</control>
						<control type="image">
							<!--Now Playing Icon-->
							<posx>1185</posx>
							<posy>0</posy>
							<width>55</width>
							<height>55</height>
							<fadetime>600</fadetime>
							<texture>pvr/icons/pvr_play.png</texture>
							<visible>ListItem.Isplaying</visible>
							<visible>!ListItem.IsRecording</visible>
						</control>
						<control type="image">
							<!--Chanel Icon-->
							<posx>1100</posx>
							<posy>5</posy>
							<width>48</width>
							<height>48</height>
							<texture>$INFO[ListItem.Icon]</texture>
						</control>
						<control type="label">
							<!--Channel Name-->
							<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="[ListItem.Isplaying | ListItem.IsRecording]">Conditional</animation>
							<posx>1200</posx>
							<width>545</width>
							<height>55</height>
							<font>Reg29</font>
							<textcolor>white</textcolor>
							<selectedcolor>white</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="image">
							<!--Separator-->
							<posx>1020</posx>
							<posy>56</posy>
							<width>785</width>
							<height>20</height>
							<fadetime>400</fadetime>
							<colordiffuse>list_separator</colordiffuse>
							<texture>common/separator.png</texture>
						</control>
					</itemlayout>
					<focusedlayout height="90" width="980">
						<control type="image">
							<!--Slider-->
							<posx>980</posx>
							<posy>0</posy>
							<width>825</width>
							<height>86</height>
							<colordiffuse>88ffffff</colordiffuse>
							<texture>views/view_50_slider_big.png</texture>
						</control>
						<control type="label">
							<!--Channel Number-->
							<posx>1030</posx>
							<posy>5</posy>
							<width>80</width>
							<height>80</height>
							<font>Reg34</font>
							<textcolor>mainblue</textcolor>
							<selectedcolor>mainblue</selectedcolor>
							<info>ListItem.ChannelNumber</info>
						</control>
						<control type="image">
							<!--Rec-->
							<posx>1185</posx>
							<posy>0</posy>
							<width>55</width>
							<height>55</height>
							<texture>pvr/icons/pvr_record.png</texture>
							<visible>ListItem.IsRecording</visible>
						</control>
						<control type="image">
							<!--Now Playing Icon-->
							<posx>1185</posx>
							<posy>0</posy>
							<width>55</width>
							<height>55</height>
							<fadetime>600</fadetime>
							<texture>pvr/icons/pvr_play.png</texture>
							<visible>ListItem.Isplaying</visible>
							<visible>!ListItem.IsRecording</visible>
						</control>
						<control type="image">
							<!--Chanel Icon-->
							<posx>1085</posx>
							<posy>5</posy>
							<width>78</width>
							<height>78</height>
							<texture>$INFO[ListItem.Icon]</texture>
						</control>
						<control type="label">
							<!--Channel Name-->
							<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="[ListItem.Isplaying | ListItem.IsRecording]">Conditional</animation>
							<posx>1200</posx>
							<width>545</width>
							<height>55</height>
							<font>Reg29</font>
							<textcolor>mainblue</textcolor>
							<selectedcolor>mainblue</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<!--Channel Now Playing-->
							<posx>1200</posx>
							<posy>50</posy>
							<width>545</width>
							<height>33</height>
							<font>Light28</font>
							<textcolor>white</textcolor>
							<selectedcolor>white</selectedcolor>
							<label>$INFO[ListItem.Title]</label>
						</control>
						<control type="image">
							<!--Separator-->
							<posx>1020</posx>
							<posy>86</posy>
							<width>785</width>
							<height>20</height>
							<fadetime>400</fadetime>
							<colordiffuse>list_separator</colordiffuse>
							<texture>common/separator.png</texture>
						</control>
					</focusedlayout>
				</control>
				<control type="group">
                <!--Scrollbar-->
                <visible>IntegerGreaterThan(Container(11).NumItems,30)</visible>
                <include>animation_view_change_pvr</include>
                <include>animation_list</include>
                <control type="scrollbar" id="70">
                    <!--Scrollbar ID70-->
                    <visible>IntegerGreaterThan(Container(11).NumItems,30)</visible>
                    <posx>1835</posx>
                    <posy>320</posy>
                    <height>570</height>
                    <onleft>11</onleft>
                    <onright>11</onright>
                    <visible allowhiddenfocus="true">Control.HasFocus(70) | Container(11).Scrolling</visible>
                    <animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(70) | Container(11).Scrolling">Conditional</animation>
                </control>
                <control type="image">
                    <!--Scrolling Letter Background-->
                    <visible>Container(11).Scrolling</visible>
                    <posx>1450</posx>
                    <posy>555</posy>
                    <width>100</width>
                    <height>100</height>
                    <texture>common/scrollbar-letter.png</texture>
                    <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
                </control>
                <control type="label">
                    <!--Scrolling Letter-->
                    <visible>Container(11).Scrolling</visible>
                    <posx>1450</posx>
                    <posy>555</posy>
                    <width>100</width>
                    <height>100</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>Bold38</font>
                    <textcolor>mainblue</textcolor>
                    <label>$INFO[ListItem.SortLetter]</label>
                    <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
                </control>
            </control>
			</control>
			
        </control>
        
		<!--Sub Menu-->
        <include>SubMenuTabLeft</include>
		<include>SubMenuTabTop</include>
		<include>PVRsideblade</include>
    </controls>
</window>