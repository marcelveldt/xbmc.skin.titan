<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="12">
    <defaultcontrol always="true">3</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <include>defaultskinsettings</include>
	
    <controls>

        <!--Global Background-->
        <include>GlobalBackground</include>
        <!--Time & Weather-->
        <include>TimeInfo</include>
		<!-- Now playing -->
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
		
        <!--Header-->
        <include>Header</include>
        <!--Titan Version-->
        <include>TitanVersion</include>
		
		<control type="group">
		<posy>30</posy>
		
        <!--Panel-->
        <control type="image">
            <posx>0</posx>
            <posy>100</posy>
            <width>1913</width>
            <height>940</height>
            <texture>views/settings_panel.png</texture>
            <include>animation_fade_visible_hidden</include>
            <include>animation_list</include>
        </control>
		
		<control type="grouplist" id="3000">
			<posx>90</posx>
			<posy>220</posy>
			<width>450</width>
			<ondown>9000</ondown>
			
			<!--default setting buttons-->
			<control type="grouplist" id="3">
				<description>Button Area</description>
				<height>750</height>
				<itemgap>-</itemgap>
				<onleft>5</onleft>
				<onright>5</onright>
				<ondown>3001</ondown>
				<orientation>vertical</orientation>
				<include>animation_fade_visible_hidden</include>
				<include>animation_list</include>
			</control>
			<!-- skin settings buttons -->
			<control type="grouplist" id="3001">
				<description>Button Area</description>
				<height>450</height>
				<itemgap>-</itemgap>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<orientation>vertical</orientation>
				<include>animation_fade_visible_hidden</include>
				<include>animation_list</include>
				<visible>window.isactive(appearancesettings)</visible>
				<control type="button" id="3003">
					<include condition="Skin.HasTheme(classic)">DialogButton</include>
					<include condition="!Skin.HasTheme(classic)">DialogButtonAlt</include>
					<focusedcolor>black</focusedcolor>
					<font>Reg28</font>
					<align>left</align>
					<height>50</height>
					<label>20077</label>
					<onclick>ActivateWindow(skinsettings)</onclick>
				</control>
			</control>
			
		</control>
        <control type="grouplist" id="5">
            <description>Control Area</description>
            <posx>605</posx>
            <posy>220</posy>
            <width>1230</width>
            <height>750</height>
            <itemgap>3</itemgap>
            <onleft>3</onleft>
            <onright>3</onright>
            <onup>5</onup>
            <ondown>5</ondown>
            <orientation>vertical</orientation>
            <include>animation_fade_visible_hidden</include>
            <include>animation_list</include>
			<visible>!Control.HasFocus(3003)</visible>
			
        </control>
        <control type="button" id="7">
            <description>Default Button</description>
            <include condition="Skin.HasTheme(classic)">DialogButton</include>
            <include condition="!Skin.HasTheme(classic)">DialogButtonAlt</include>
            <focusedcolor>black</focusedcolor>
            <font>Reg28</font>
            <align>left</align>
            <height>50</height>
        </control>
        <control type="radiobutton" id="8">
            <description>Default Radio Button</description>
            <focusedcolor>black</focusedcolor>
            <font>Reg28</font>
            <align>left</align>
            <height>50</height>
            <radioposx>1075</radioposx>
        </control>
        <control type="spincontrolex" id="9">
            <description>Default Spin Control</description>
            <focusedcolor>black</focusedcolor>
            <font>Reg28</font>
            <align>left</align>
            <height>50</height>
        </control>
		<control type="sliderex" id="13">
			<description>Default Slider</description>
			<posx>0</posx>
			<posy>0</posy>
			<include>DialogButton</include>
			<textwidth>352</textwidth>
			<textoffsetx>20</textoffsetx>
			<sliderwidth>140</sliderwidth>
			<sliderheight>20</sliderheight>
			<align>left</align>
			<texturesliderbar>osd/slider_back.png</texturesliderbar>
			<textureslidernib>osd/orb_nofo.png</textureslidernib>
			<textureslidernibfocus>osd/orb_fo.png</textureslidernibfocus>
			<visible>SubString(System.BuildVersion,14,left)</visible>
		</control>

        <control type="button" id="10">
            <description>Default Category Button</description>
            <focusedcolor>black</focusedcolor>
            <font>Reg28</font>
            <align>left</align>
            <height>50</height>
        </control>
        <control type="grouplist" id="9000">
            <posx>90</posx>
            <posy>830</posy>
            <width>450</width>
            <height>600</height>
            <onleft>9000</onleft>
            <onright>5</onright>
            <onup>3</onup>
            <ondown>3</ondown>
            <onback>3</onback>
            <itemgap>0</itemgap>
            <include>animation_fade_visible_hidden</include>
            <include>animation_list</include>
            <control type="label" id="200">
                <height>50</height>
                <font>Reg28</font>
                <font>Reg28</font>
                <label>31071</label>
                <textcolor>white</textcolor>
                <align>left</align>
            </control>
            <control type="button" id="20">
                <description>Setting level button</description>
                <focusedcolor>black</focusedcolor>
                <font>Reg28</font>
                <align>left</align>
                <height>50</height>
                <label>10037</label>
                <onclick>SettingsLevelChange</onclick>
            </control>
            <control type="button" id="21">
                <description>Reset button</description>
                <font>Reg28</font>
                <focusedcolor>black</focusedcolor>
                <align>left</align>
                <height>50</height>
                <label>10035</label>
                <onclick>SettingsReset</onclick>
            </control>
        </control>
		 </control>
    </controls>
</window>