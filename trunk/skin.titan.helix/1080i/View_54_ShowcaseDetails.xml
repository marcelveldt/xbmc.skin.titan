<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="View_54_ShowcaseDetails">
        <!-- movie details and footer -->
        <control type="group">
            <visible>Control.IsVisible(54)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>MovieDetails</include>
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
        <control type="group">
            <!-- Warplist ID="54"-->
            <visible>Control.IsVisible(54) + IntegerGreaterThan(Container.NumItems,1)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>animation_list</include>
            <control type="wraplist" id="54">
                <!--Wraplist ID 54-->
                <posx>-52</posx>
                <posy>460</posy>
                <width>2100</width>
                <height>400</height>
                <onleft>54</onleft>
                <onright>54</onright>
                <onup>9000</onup>
                <ondown>noop</ondown>
                <viewtype label="Showcase Details">wrap</viewtype>
                <pagecontrol>60</pagecontrol>
                <orientation>horizontal</orientation>
                <scrolltime tween="cubic" easing="inout">450</scrolltime>
                <!--scrolltime>250</scrolltime-->
                <focusposition>3</focusposition>
				<visible>container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)</visible>
            </control>
            <include>ShowcaseMovies</include>
            <!--Showcase-->
        </control>
    </include>
    <!--Includes-->
</includes>