<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>15</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<views>15,501,505,506</views>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
		<!--Time & Weather-->
        <include>TimeInfo</include>
		<!--NowPlaying-->
        <include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
        <include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
        
        <!--Header-->
        <include>Header</include>
        <!--Hidden-->
        <control type="label" id="29">
            <description>Empty so we can pass the values up one level</description>
            <visible>False</visible>
        </control>
        <control type="label" id="30">
            <description>Empty so we can pass the values up one level</description>
            <visible>False</visible>
        </control>
        <!--PVR Views-->
		<control type="group" id="50">
			
			<include>BannerView</include>
			<include>BannerViewDetails</include>
			<include>ViewExtendedList</include>
		
		
			 <!--LiveTVRecordingsView ID=13-->
			<control type="group">
				<posy>45</posy>
				<visible>Control.IsVisible(15)</visible>
				<include>PVRpanelBackground</include>
			
				<control type="group">
					<!--Video Window-->
					<visible>Control.IsVisible(15)</visible>
					<visible>!IsEmpty(ListItem.StartDate)</visible>
					<include>animation_view_change_pvr</include>
					<include>animation_list</include>
					<posx>115</posx>
					<posy>330</posy>
					<control type="image">
						<width>300</width>
						<height>188</height>
						<texture>$INFO[ListItem.Thumb]</texture>
						<!--<visible>!Player.HasVideo</visible>-->
					</control>
				</control>
				<control type="group">
					<!--Start, End, Next-->
					<visible>Control.IsVisible(15)</visible>
					<visible>!IsEmpty(ListItem.StartDate)</visible>
					<include>animation_view_change_pvr</include>
					<include>animation_list</include>
					<posx>450</posx>
					<posy>330</posy>
					<control type="group">
						<!-- Ground 1 -->
						<posy>0</posy>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>mainblue</textcolor>
							<label>$LOCALIZE[551] :</label>
						</control>
						<control type="fadelabel">
							<posx>130</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>white</textcolor>
							<label>$INFO[Container(15).ListItem.Title]</label>
						</control>
					</control>
					<control type="group">
						<!-- Ground 2 -->
						<posy>50</posy>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>mainblue</textcolor>
							<label>$LOCALIZE[19029] :</label>
						</control>
						<control type="label">
							<posx>130</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>white</textcolor>
							<label>$INFO[Container(15).ListItem.ChannelName]</label>
						</control>
					</control>
				</control>
				<control type="group">
					<!--Infos-->
					<visible>Control.IsVisible(15)</visible>
					<include>animation_view_change_pvr</include>
					<include>animation_list</include>
					<control type="textbox">
						<shadowcolor></shadowcolor>
						<!--Info Plot-->
						<posx>120</posx>
						<posy>560</posy>
						<width>830</width>
						<height>240</height>
						<font>Light32</font>
						<textcolor>white</textcolor>
						<autoscroll>false</autoscroll>
						<label>$INFO[ListItem.Plot]</label>
					</control>
					<control type="label">
						<!--Next Start Dat -->
						<posx>120</posx>
						<posy>810</posy>
						<width>800</width>
						<font>Reg30</font>
						<textcolor>ccmainblue</textcolor>
						<label>$INFO[Container(15).ListItem.StartDate]</label>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<!--Next Title-->
						<posx>120</posx>
						<posy>845</posy>
						<width>800</width>
						<font>Light28</font>
						<textcolor>mainblue</textcolor>
						<label>$INFO[ListItem.StartTime]$INFO[ListItem.Duration, / ,]</label>
						<scroll>false</scroll>
					</control>
				</control>
				<control type="list" id="15">
					<!--List ID=13-->
					<include>animation_view_change_pvr</include>
					<include>animation_list</include>
					<posx>0</posx>
					<posy>320</posy>
					<width>1920</width>
					<height>570</height>
					<onleft>9000</onleft>
					<onright>70</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					<viewtype label="535">list</viewtype>
					<pagecontrol>70</pagecontrol>
					<scrolltime>200</scrolltime>
					<!-- =========== -->
					<!-- x=980 w=765 -->
					<!-- =========== -->
					<itemlayout height="60" width="980">
						<control type="label">
							<!--Recording Name-->
							<posx>1050</posx>
							<width>715</width>
							<height>55</height>
							<font>Reg28</font>
							<textcolor>white</textcolor>
							<selectedcolor>white</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="image">
							<!--Separator-->
							<posx>1020</posx>
							<posy>56</posy>
							<width>785</width>
							<height>20</height>
							<fadetime>400</fadetime>
							<colordiffuse>list_separator</colordiffuse>
							<texture>common/separator.png</texture>
						</control>
					</itemlayout>
					<focusedlayout height="90" width="980">
						<control type="group">
							<visible>!IsEmpty(ListItem.StartDate)</visible>
							<control type="image">
								<!--Slider-->
								<posx>980</posx>
								<posy>0</posy>
								<width>825</width>
								<height>86</height>
								<colordiffuse>88ffffff</colordiffuse>
								<texture>views/view_50_slider_big.png</texture>
							</control>
							<control type="label">
								<!--Start: Date, Time, Duration-->
								<posx>1050</posx>
								<posy>50</posy>
								<width>715</width>
								<height>33</height>
								<font>Light28</font>
								<textcolor>white</textcolor>
								<selectedcolor>mainblue</selectedcolor>
								<align>left</align>
								<label>$INFO[ListItem.StartDate] - $INFO[ListItem.StartTime]$INFO[ListItem.Duration, / ,]</label>
							</control>
							<control type="label">
								<!--Recording Name-->
								<posx>1050</posx>
								<width>715</width>
								<height>55</height>
								<font>Reg36</font>
								<textcolor>mainblue</textcolor>
								<selectedcolor>mainblue</selectedcolor>
								<align>left</align>
								<aligny>center</aligny>
								<label>$INFO[ListItem.Label]</label>
							</control>
							<control type="image">
								<!--Separator-->
								<posx>1020</posx>
								<posy>86</posy>
								<width>785</width>
								<height>20</height>
								<fadetime>400</fadetime>
								<colordiffuse>list_separator</colordiffuse>
								<texture>common/separator.png</texture>
							</control>
						</control>
					</focusedlayout>
				</control>

			</control>
		</control>

			<!--Sub Menu-->
        <include>SubMenuTabLeft</include>
		<include>SubMenuTabTop</include>
		<include>PVRsideblade</include>
    </controls>
</window>
		