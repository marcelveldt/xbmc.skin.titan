<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="2">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <views>50,57,59,501</views>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
		<!-- picture background -->
		<control type="image">
            <include>DimensionsFullscreen</include>
            <texture background="true">$INFO[ListItem.PicturePath]</texture>
			<aspectratio>scale</aspectratio>
            <fadetime>800</fadetime>
			<visible>Skin.HasSetting(ItemFanartBg)</visible>
        </control>
		<!--Time & Weather-->
        <include>TimeInfo</include>
		<!--NowPlaying-->
        <include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
        <include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
        
        <!--Header-->
        <include>Header</include>
        <!--Hidden Button-->
        <control type="radiobutton" id="19">
            <description>Filter (hidden)</description>
            <include>HiddenButton</include>
        </control>
        <!--Views-->
        <include>View_50_List</include>
        <include>BannerView</include>
		<include>View_57_BigPanel</include>
		<include>View_59_BigPanelDetails</include>
        <!--Sub Menu Tab Left-->
        <include>SubMenuTabLeft</include>
		<include>SubMenuTabTop</include>
        <!--Sub Menu-->
        <control type="group">
            <include condition="skin.hastheme(classic)">SideBladeClassic</include>
			<include condition="!skin.hastheme(classic)">SideBladeModern</include>
            <!--Gouplist 9000-->
            <control type="grouplist" id="9000">
                <posx>21</posx>
                <posy>70</posy>
                <width>458</width>
                <height>650</height>
                <itemgap>3</itemgap>
                <onleft>50</onleft>
                <onright>50</onright>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <orientation>vertical</orientation>
                <!--Button-->
                <control type="label" id="200">
                    <!--Label Menu-->
                    <width>458</width>
                    <align>left</align>
                    <textoffsetx>50</textoffsetx>
                    <font>Bold40</font>
                    <textcolor>$VAR[ThemeFontColorBlack]</textcolor>
                    <label>$LOCALIZE[33061]:</label>
                </control>
                <control type="image" id="201">
                    <!--Seperator-->
                    <width>458</width>
                    <height>20</height>
                    <align>left</align>
                    <texture>common/menu-separator.png</texture>
                </control>
                <control type="button" id="3">
                    <!--Sort-->
                    <include>SubMenuButton</include>
                </control>
                <control type="togglebutton" id="4">
                    <!--Ascending-->
                    <include>SubMenuButton</include>
                    <label>584</label>
                    <altlabel>585</altlabel>
                </control>
                <control type="button" id="6">
                    <!--Slideshow-->
                    <visible>!ListItem.IsFolder</visible>
                    <include>SubMenuButton</include>
                    <label>108</label>
                </control>
                <control type="button" id="7">
                    <!--Recursive Slideshow-->
                    <visible>ListItem.IsFolder</visible>
                    <include>SubMenuButton</include>
                    <label>108</label>
                </control>
                <control type="radiobutton" id="9">
                    <!--Randomise-->
                    <include>SubMenuButton</include>
                    <label>13319</label>
                </control>
                <control type="button" id="400">
                    <!--Set View-->
                    <include>SubMenuButton</include>
                    <label>View: $INFO[Container.Viewmode]</label>
                    <onclick>Container.NextViewMode</onclick>
				</control>
				<control type="radiobutton" id="401">
                    <!--live picture bg-->
                    <include>SubMenuButton</include>
                    <label>31132</label>
					<onclick>Skin.ToggleSetting(ItemFanartBg)</onclick>
					<selected>Skin.HasSetting(ItemFanartBg)</selected>
                </control>
            </control>
        </control>
    </controls>
</window>