<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  
  <include name="View_57_BigPanel">
    <control type="group">
      <visible>Control.IsVisible(57)</visible>
      <include>animation_fade_open_close</include>
	  <include>animation_fade_visible_hidden</include>
      <control type="panel" id="57">
        <viewtype label="Big Panel">Big Panel</viewtype>
        <posx>45</posx>
        <posy>175</posy>
        <width>1836</width>
        <height>761</height>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>57</onup>
        <ondown>57</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
        <itemlayout condition="container.content(MusicVideos) | [Container.Content(tvshows)] | Container.Content(Movies) | container.content(seasons)" height="380" width="259">
          <control type="image">
            <include>BigPanelPosterDimensions</include>
            <include>PosterThumbBG</include>
          </control>
          <control type="image">
            <include>BigPanelPosterDimensions</include>
            <include>PosterThumb</include>
          </control>
          <include condition="!skin.hastheme(classic)">BigPanelWatchedImageModern</include>
		  <include condition="skin.hastheme(classic)">BigPanelWatchedImageClassic</include>
        </itemlayout>
        <focusedlayout condition="container.content(MusicVideos) | [Container.Content(tvshows)] | Container.Content(Movies) | container.content(seasons)" height="380" width="259">
          <control type="image">
            <include>BigPanelPosterDimensions</include>
            <include>PosterThumbFO</include>
          </control>
          <control type="image">
            <include>BigPanelPosterDimensions</include>
            <include>PosterThumb</include>
          </control>
          <include condition="!skin.hastheme(classic)">BigPanelWatchedImageModern</include>
		  <include condition="skin.hastheme(classic)">BigPanelWatchedImageClassic</include>
        </focusedlayout>
        <itemlayout condition="Window.IsActive(MyPrograms.xml) | container.content(addons) | Window.IsActive(MyMusicNav.xml) | Window.IsActive(MyMusicSongs.xml)" height="266" width="270">
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumbBG</include>
          </control>
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumb</include>
          </control>
        </itemlayout>
        <focusedlayout condition="Window.IsActive(MyPrograms.xml) | container.content(addons) | Window.IsActive(MyMusicNav.xml) | Window.IsActive(MyMusicSongs.xml)" height="266" width="270">
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumbFO</include>
          </control>
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumb</include>
          </control>
        </focusedlayout>
        <itemlayout condition="![Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons) | Window.IsActive(MyMusicNav.xml) | Window.IsActive(MyMusicSongs.xml)]" height="253" width="366">
          <control type="group">
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumbBG</include>
			  </control>
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumb</include>
			  </control>
			<control type="image">
				<posx>18</posx>
				<posy>45</posy>
				<width>342</width>
				<height>195</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
			</control>
			<control type="label">
				<include condition="!SubString(System.BuildVersion,14,left)">BigPanelLabelPosGotham</include>
				<include condition="SubString(System.BuildVersion,14,left)">BigPanelabelPosHelix</include>
				<posy>175</posy>
				<width>320</width>
				<height>60</height>
				<font>Reg25</font>
				<align>center</align>
				<info>ListItem.Label</info>
				<textcolor>darkgrey</textcolor>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<posx>315</posx>
				<posy>18</posy>
				<width>40</width>
				<height>40</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture>$VAR[WatchedImage]</texture>
				<visible>skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<posx>301</posx>
				<posy>10</posy>
				<width>60</width>
				<height>60</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
		</control>
        </itemlayout>
        <focusedlayout condition="![Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons) | Window.IsActive(MyMusicNav.xml) | Window.IsActive(MyMusicSongs.xml)]" height="253" width="366">
          <control type="group">
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumbFO</include>
			  </control>
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumb</include>
			  </control>
			  <control type="image">
				<posx>18</posx>
				<posy>45</posy>
				<width>342</width>
				<height>195</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
			</control>
			<control type="label">
				<include condition="!SubString(System.BuildVersion,14,left)">BigPanelLabelPosGotham</include>
				<include condition="SubString(System.BuildVersion,14,left)">BigPanelabelPosHelix</include>
				<posy>175</posy>
				<width>320</width>
				<height>60</height>
				<font>Reg25</font>
				<align>center</align>
				<info>ListItem.Label</info>
				<textcolor>white</textcolor>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<posx>315</posx>
				<posy>18</posy>
				<width>40</width>
				<height>40</height>
				<texture>$VAR[WatchedImage]</texture>
				<visible>skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<posx>301</posx>
				<posy>10</posy>
				<width>60</width>
				<height>60</height>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
		</control>
        </focusedlayout>
	  </control>
      <control type="scrollbar" id="60">
        <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
        <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
        <posx>20r</posx>
        <posy>360</posy>
        <width>36</width>
        <height>700</height>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
        <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <onleft>57</onleft>
        <onright>9000</onright>
      </control>
    </control>
	<!-- footer bar -->
	<control type="group">
		<include>animation_fade_open_close</include>
		 <include>animation_fade_visible_hidden</include>
		<visible>Control.IsVisible(57)</visible>
		<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
		<include condition="!skin.hassetting(nofooterbar)">Footer</include>
	</control>
  </include>
</includes>
