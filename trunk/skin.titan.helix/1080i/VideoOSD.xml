<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="2901">
    <defaultcontrol always="true">203</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
		<!-- video info -->
		<include condition="Skin.HasSetting(EnableOSDInfo)">OSDInfoPanel</include>
	
        <!--OSD Panel-->
        <control type="group">
            <visible>!Window.IsActive(filebrowser)</visible>
            <visible>!Window.IsActive(sliderdialog)</visible>
            <include condition="Skin.HasTheme(classic)">OSDPanelClassic</include>
			<include condition="!Skin.HasTheme(classic)">OSDPanelModern</include>
			<animation effect="slide" start="0,400" end="0,0" tween="cubic" easing="out" delay="300" time="450" reversible="false">Visible</animation>
			<animation effect="slide" start="0,0" end="0,400" tween="cubic" easing="out" delay="300" time="450" reversible="false">Hidden</animation>
			<animation effect="slide" start="0,400" end="0,0" tween="cubic" easing="out" delay="300" time="450" reversible="false">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,400" tween="cubic" easing="out" delay="300" time="450" reversible="false">WindowClose</animation>
        </control>
        <!--Buttons-->
        <control type="group" id="1000">
            <include condition="Skin.HasTheme(classic)">OSDButtonsClassic</include>
			<include condition="!Skin.HasTheme(classic)">OSDButtonsModern</include>
			<animation effect="slide" start="0,400" end="0,0" tween="cubic" easing="out" delay="300" time="450" reversible="false">Visible</animation>
			<animation effect="slide" start="0,0" end="0,400" tween="cubic" easing="out" delay="300" time="450" reversible="false">Hidden</animation>
			<animation effect="slide" start="0,400" end="0,0" tween="cubic" easing="out" delay="300" time="450" reversible="false">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,400" tween="cubic" easing="out" delay="300" time="450" reversible="false">WindowClose</animation>
        </control>
    </controls>
</window>