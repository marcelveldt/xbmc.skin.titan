<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>-</defaultcontrol>
    <zorder>3</zorder>
    <!--Normal "1" over DialogVideoInfo.xml and DialogSelect.xml-->
    <controls>
        <control type="image" id="400">
            <description>Icon</description>
            <posx>-20</posx>
            <posy>-20</posy>
            <width>1</width>
            <height>1</height>
            <texture>-</texture>
        </control>
        <control type="label" id="401">
            <description>Line 1</description>
            <font>-</font>
        </control>
        <control type="label" id="402">
            <description>Line 2</description>
            <font>-</font>
        </control>
        <!-- Default notification -->
        <control type="group">
            <!-- <include>animation_static_dialog</include>
            <include>animation_fade_visible_hidden</include>
            <include>animation_fade_open_close</include> -->
            
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,-400" end="0,0" tween="cubic" easing="out" time="750" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="slide" start="0,0" end="0,-400" tween="cubic" easing="out" time="750" />
			</animation>
			<posx>60</posx>
            <posy>40</posy>
            <visible>!Window.IsActive(fullscreenvideo) + !Window.IsVisible(startup) + !Window.IsActive(DialogExtendedProgressBar.xml) + !Control.IsVisible(77778)</visible>
            <control type="group">
				<control type="image">
					<posx>-120</posx>
					<posy>-60</posy>
					<width>2040</width>
					<height>180</height>
					<texture background="true">views/filemanager_panel1.png</texture>
					<visible>!skin.hastheme(classic)</visible>
				</control>
				<control type="group">
					<posx>-60</posx>
					<posy>-40</posy>
					<visible>!skin.hastheme(classic)</visible>
					<include>TimeInfo</include>
				</control>
                <control type="image">
                    <description>Icon</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>scale</aspectratio>
                    <texture>dialogs/kaitoast/info.png</texture>
                </control>
                <control type="label">
                    <description>Line 1</description>
                    <posx>90</posx>
                    <posy>0</posy>
                    <width>1500</width>
                    <height>50</height>
                    <label>$INFO[Control.GetLabel(401)]</label>
                    <font>Bold38</font>
                    <textcolor>ccmainblue</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="label">
                    <description>Line 2</description>
                    <posx>90</posx>
                    <posy>40</posy>
                    <width>1500</width>
                    <height>50</height>
                    <label>$INFO[Control.GetLabel(402)]</label>
                    <font>Reg30</font>
                    <textcolor>eewhite</textcolor>
                    <scroll>false</scroll>
                </control>
            </control>
        </control>
		
	</controls>
</window>