<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="1234" type="dialog">
    <defaultcontrol>1236</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <coordinates>
        <system>1</system>
        <posx>660</posx>
        <posy>240</posy>
    </coordinates>
    <controls>
        <control type="group">
            <include>animation_dialog</include>
            <control type="image">
                <width>600</width>
                <height>600</height>
                <texture border="39">dialogs/default/bg.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <include>animation_fade_open_close</include>
                <animation effect="fade" time="600">WindowOpen</animation>
                <animation effect="fade" time="600">WindowClose</animation>
                <posx>65</posx>
                <posy>50</posy>
                <height>64</height>
                <width>64</width>
                <aligny>center</aligny>
                <colordiffuse>white</colordiffuse>
                <texture>icons/icon_music.png</texture>
            </control>
            <control type="label" id="1235">
                <description>header label</description>
                <posx>0</posx>
                <posy>50</posy>
                <width>600</width>
                <align>center</align>
                <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                <font>Bold32</font>
                <label>[UPPERCASE]$LOCALIZE[2][/UPPERCASE]</label>
            </control>
            <control type="list" id="1236">
                <posx>20</posx>
                <posy>150</posy>
                <width>560</width>
                <height>690</height>
                <onleft>1236</onleft>
                <onright>1236</onright>
                <onup>1236</onup>
                <ondown>1236</ondown>
                <itemlayout height="60">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <height>60</height>
                        <width>600</width>
                        <texture>common/button-nf.png</texture>
                    </control>
                    <control type="label">
                        <posx>50</posx>
                        <width>600</width>
                        <height>60</height>
                        <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout height="60">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <height>60</height>
                        <width>600</width>
                        <texture>common/button-fo.png</texture>
                    </control>
                    <control type="label">
                        <posx>50</posx>
                        <width>600</width>
                        <height>60</height>
                        <textcolor>$VAR[ThemeFontColorDarkGrey]</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                </focusedlayout>
                <content>
                    <item id="10">
                        <!-- MB custom 1-->
                        <label>$INFO[Window(Home).Property(xbmb3c.usr.music.0.title)]</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick>$INFO[Window(Home).Property(xbmb3c.usr.music.0.path)]</onclick>
                        <visible>Skin.HasSetting(HomeMenuUseMBforMusic) + !IsEmpty(Window(Home).Property(xbmb3c.usr.music.0.title))</visible>
                    </item>
                    <item id="11">
                        <!-- MB custom 2-->
                        <label>$INFO[Window(Home).Property(xbmb3c.usr.music.1.title)]</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick>$INFO[Window(Home).Property(xbmb3c.usr.music.1.path)]</onclick>
                        <visible>Skin.HasSetting(HomeMenuUseMBforMusic) + !IsEmpty(Window(Home).Property(xbmb3c.usr.music.1.title))</visible>
                    </item>
                    <item id="12">
                        <!-- MB custom 3-->
                        <label>$INFO[Window(Home).Property(xbmb3c.usr.music.2.title)]</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick>$INFO[Window(Home).Property(xbmb3c.usr.music.2.path)]</onclick>
                        <visible>Skin.HasSetting(HomeMenuUseMBforMusic) + !IsEmpty(Window(Home).Property(xbmb3c.usr.music.2.title))</visible>
                    </item>
                    <item id="2">
                        <!--Genres-->
                        <label>135</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick>ActivateWindow(Music, Genres, return)</onclick>
                        <visible>!Skin.HasSetting(HomeMenuUseMBforMusic)</visible>
                    </item>
                    <item id="3">
                        <!--Artists-->
                        <label>133</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick>ActivateWindow(Music, Artists, return)</onclick>
                        <visible>!Skin.HasSetting(HomeMenuUseMBforMusic)</visible>
                    </item>
                    <item id="6">
                        <!--Recently Added-->
                        <label>359</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick condition="!Skin.HasSetting(HomeMenuUseMBforMusic)">ActivateWindow(Music, RecentlyAddedAlbums, return)</onclick>
                        <onclick condition="Skin.HasSetting(HomeMenuUseMBforMusic)">$INFO[Window(Home).Property(xbmb3c.std.music.1.path)]</onclick>
                    </item>
                    <item id="7">
                        <!--Recently Played-->
                        <label>517</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick condition="!Skin.HasSetting(HomeMenuUseMBforMusic)">ActivateWindow(Music, RecentlyPlayedAlbums, return)</onclick>
                        <onclick condition="Skin.HasSetting(HomeMenuUseMBforMusic)">$INFO[Window(Home).Property(xbmb3c.std.music.2.path)]</onclick>
                        <visible>IntegerGreaterThan(Window(Home).Property(MB3TotalPlayedMusicSongs),0) + Skin.HasSetting(HomeMenuUseMBforMusic)</visible>
                    </item>
                    <item id="8">
                        <!-- Playlists-->
                        <label>136</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick>ActivateWindow(Music, Playlists, return)</onclick>
                        <visible>!Skin.HasSetting(HomeMenuUseMBforMusic)</visible>
                    </item>
                    <item id="9">
                        <!-- Radio-->
                        <label>19021</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick condition="Skin.String(HomeMenuUseRadioCollection)">ActivateWindow(Music,$INFO[Skin.String(HomeMenuUseRadioCollection)],return)</onclick>
                        <onclick condition="!Skin.String(HomeMenuUseRadioCollection)">ActivateWindowAndFocus(MyPVR, 33,0, 10,0)</onclick>
                        <visible>System.GetBool(pvrmanager.enabled)</visible>
                    </item>
                    <item id="1">
                        <!-- All Music-->
                        <label>10516</label>
                        <onclick>Dialog.Close(1234)</onclick>
                        <onclick condition="!Skin.HasSetting(HomeMenuUseMBforMusic)">ActivateWindow(Music, MusicLibrary, return)</onclick>
                        <onclick condition="Skin.HasSetting(HomeMenuUseMBforMusic)">$INFO[Window(Home).Property(xbmb3c.std.music.0.path)]</onclick>
                    </item>
                </content>
            </control>
        </control>
    </controls>
</window>