<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_56_BannerPlex">
        <!--Panel-->
        <control type="group">
            <visible>Control.IsVisible(56)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
			
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
			
            <!-- ID="52" -->
            <control type="panel" id="56">
                <posx>45</posx>
                <posy>340</posy>
                <width>1860</width>
                <height>570</height>
                <onup>56</onup>
                <ondown>56</ondown>
                <onleft>9000</onleft>
                <onright>56</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Banner Plex">bigwide</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
                <itemlayout height="145" width="610" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
					<control type="group">
						<posy>10</posy>
						<posx>10</posx>
						<control type="image">
							<width>604</width>
							<height>126</height>
							<texture>home/home_shadow.png</texture>
						</control>
						<include>BannerPlexlayout</include>
					</control>
                </itemlayout>
                <focusedlayout height="145" width="610" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                    <control type="group">
						<posy>10</posy>
						<posx>10</posx>
                        <animation type="focus">
                            <effect type="zoom" start="100" end="105" center="auto" time="150" />
                        </animation>
                        <animation type="unfocus">
                            <effect type="zoom" start="105" end="100" center="auto" time="150" />
                        </animation>
						<control type="image">
							<width>590</width>
							<height>120</height>
							<bordersize>-5</bordersize>
							<texture>colors/color_white.png</texture>
							<colordiffuse>$INFO[Skin.String(focuscolor)]</colordiffuse>
							<aspectratio scalediffuse="false" align="left">stretch</aspectratio>
						</control>
						<include>BannerPlexlayout</include>
                    </control>
                </focusedlayout>
            </control>
        </control>
       <control type="grouplist">
            <control type="label" id="5101">
                <include>HiddenButton</include>
                <label>$VAR[value_list_label_2]</label>
            </control>
            <control type="label" id="5201">
                <include>HiddenButton</include>
                <label>$VAR[value_ground1_label]</label>
            </control>
            <control type="label" id="5202">
                <include>HiddenButton</include>
                <label>$VAR[value_ground2_label]</label>
            </control>
            <control type="label" id="5203">
                <include>HiddenButton</include>
                <label>$VAR[value_ground3_label]</label>
            </control>
            <control type="label" id="5204">
                <include>HiddenButton</include>
                <label>$VAR[value_ground4_label]</label>
            </control>
            <control type="label" id="5301">
                <include>HiddenButton</include>
                <label>$VAR[value_ground1_value]</label>
            </control>
            <control type="label" id="5302">
                <include>HiddenButton</include>
                <label>$VAR[value_ground2_value]</label>
            </control>
            <control type="label" id="5303">
                <include>HiddenButton</include>
                <label>$VAR[value_ground3_value]</label>
            </control>
            <control type="label" id="5304">
                <include>HiddenButton</include>
                <label>$VAR[value_ground4_value]</label>
            </control>
        </control>
        <!--Scollbar-->
        <control type="group">
            <visible>Control.IsVisible(56)</visible>
            <visible>![Window.IsActive(DialogVideoInfo.xml)]</visible>
            <visible>IntegerGreaterThan(Container(56).NumItems,30)</visible>
            <visible>!Container.Content(songs)</visible>
            <control type="scrollbar" id="60">
                <!--Scrollbar ID60-->
                <visible>IntegerGreaterThan(Container(56).NumItems,30)</visible>
                <visible>!Container.Content(songs) + !Container.Content(seasons) + !Container.Content(episodes)</visible>
                <posx>60</posx>
				<width>1800</width>
                <posy>940</posy>
                <height>15</height>
                <onup>56</onup>
                <onright>noop</onright>
				<orientation>horizontal</orientation>
                <visible allowhiddenfocus="true">Control.HasFocus(60) | Container.Scrolling</visible>
                <animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Container.Scrolling">Conditional</animation>
            </control>
            <control type="image">
                <!--Scrolling Letter Background-->
                <visible>Container(56).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <texture>common/scrollbar-letter.png</texture>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
            <control type="label">
                <!--Scrolling Letter-->
                <visible>Container(56).Scrolling</visible>
                <posx>910</posx>
                <posy>490</posy>
                <width>100</width>
                <height>100</height>
                <align>center</align>
                <aligny>center</aligny>
                <font>Bold38</font>
                <textcolor>mainblue</textcolor>
                <label>$INFO[ListItem.SortLetter]</label>
                <animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
                <animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
            </control>
        </control>
    </include>
</includes>