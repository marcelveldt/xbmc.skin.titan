<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  <include name="View_512_ThumbsDetails">
	
    <control type="group">
      <visible>Control.IsVisible(512)</visible>
		<include>animation_view_change</include>
      
	  <control type="group">
        <visible>IntegerGreaterThan(Container(512).NumItems,0)</visible>
        <include>MovieDetailsLeft</include>
      </control>
	  
	  <control type="panel" id="512">
        <viewtype label="31439">icons</viewtype>
        <posx>785</posx>
        <posy>179</posy>
        <width>1136</width>
        <height>800</height>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>512</onup>
        <ondown>512</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
		<itemlayout height="202" width="364">
          <control type="group">
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumbBG</include>
			  </control>
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumb</include>
			  </control>
			<control type="image">
				<posx>18</posx>
				<posy>10</posy>
				<width>325</width>
				<height>175</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>125</posy>
				<width>300</width>
				<height>60</height>
				<font>Reg22</font>
				<align>left</align>
				<info>ListItem.Label</info>
				<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<right>21</right>
				<posy>10</posy>
				<width>60</width>
				<height>60</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="diffuse/watched_icon.png">$VAR[WatchedImage]</texture>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="label">
				<!--watched label-->
				<width>100</width>
				<centerright>40</centerright>
				<posy>-10</posy>
				<align>center</align>
				<label>$VAR[WatchedLabel]</label>
				<font>Light20</font>
				<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
		</control>
        </itemlayout>
        <focusedlayout height="202" width="364">
          <control type="group">
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumbFO</include>
			  </control>
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumb</include>
			  </control>
			  <control type="image">
				<posx>18</posx>
				<posy>10</posy>
				<width>325</width>
				<height>175</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>125</posy>
				<width>300</width>
				<height>60</height>
				<font>Reg22</font>
				<scroll>true</scroll>
				<align>left</align>
				<info>ListItem.Label</info>
				<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<right>21</right>
				<posy>10</posy>
				<width>60</width>
				<height>60</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="diffuse/watched_icon.png">$VAR[WatchedImage]</texture>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="label">
				<!--watched label-->
				<width>100</width>
				<centerright>40</centerright>
				<posy>-10</posy>
				<align>center</align>
				<label>$VAR[WatchedLabel]</label>
				<font>Light20</font>
				<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
		</control>
		
        </focusedlayout>
	  </control>
      
	  
	  
	  <!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(512)</visible>
			<right>15</right>
			<posy>175</posy>
			<width>25</width>
			<height>770</height>
			<onup>60</onup>
			<ondown>60</ondown>
			<onleft>509</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
		</control>
    
	  
    </control>
	
	
	

  </include>
</includes>
