<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="610">
    <defaultcontrol always="true">11</defaultcontrol>
    <controls>
		<control type="group">
			<posx>-660</posx>
			<posy>0</posy>
			<animation type="WindowOpen">
				<effect type="slide" start="0" end="660" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="660" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<!--Panel-->
			<control type="image">
				<posy>-250</posy>
				<posx>-20</posx>
				<width>690</width>
				<height>1750</height>
				<texture border="5">diffuse/panel.png</texture>
				<animation effect="fade" end="90" time="0" condition="true">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(PanelColor)]</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			
			<control type="image">
				<!--Channel Icon-->
				<posx>10</posx>
				<posy>25</posy>
				<width>100</width>
				<height>100</height>
				<texture>$INFO[VideoPlayer.Cover]</texture>
				<aspectratio>keep</aspectratio>
			</control>

		
			<!-- header -->
			<control type="label">
				<posx>140</posx>
				<posy>10</posy>
				<width min="80" max="524">auto</width>
				<height>100</height>
				<font>Bold45</font>
				<align>left</align>
				<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
				<label>$LOCALIZE[19222]$INFO[VideoPlayer.ChannelName, â€¢ ,]</label>
				<visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml)</visible>
				<animation effect="slide" start="0" end="-130" time="0" reversible="false" condition="IsEmpty(VideoPlayer.Cover)">Conditional</animation>
			</control>
			
			<control type="label">
				<!--Info Time Date-->
				<posx>140</posx>
				<posy>80</posy>
				<width>524</width>
				<height>50</height>
				<font>Reg28</font>
				<textcolor>midgrey</textcolor>
				<label>$INFO[Container(11).ListItem.StartDate]</label>
				<animation effect="slide" start="0" end="-130" time="0" reversible="false" condition="IsEmpty(VideoPlayer.Cover)">Conditional</animation>
			</control>
			
			<!--Label Menu: -->
			<control type="image">
				<!--Seperator-->
				<posx>-80</posx>
				<posy>140</posy>
				<width>790</width>
				<height>20</height>
				<align>left</align>
				<texture>common/menu-separator.png</texture>
			</control>
			
			<!--List ID=11-->
			<control type="list" id="11">
				<posx>0</posx>
				<posy>150</posy>
				<width>650</width>
				<height>910</height>
				<onleft>noop</onleft>
				<onright>dialog.close(all,true)</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<viewtype label="535">list</viewtype>
				<pagecontrol>70</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="62" width="667">
					<control type="label">
						<!--Time-->
						<posx>10</posx>
						<posy>10</posy>
						<width>120</width>
						<height>25</height>
						<font>Reg26</font>
						<textcolor>aawhite</textcolor>
						<selectedcolor>mainblue</selectedcolor>
						<align>left</align>
						<info>ListItem.StartTime</info>
					</control>
					<control type="image">
						<!--Rec-->
						<posx>140</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>
						<texture>pvr/icons/pvr_record.png</texture>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
					<control type="image">
						<!--Now Playing Icon-->
						<posx>140</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>
						<fadetime>600</fadetime>
						<texture>pvr/icons/pvr_play.png</texture>
						<visible>ListItem.IsPlaying + !ListItem.IsRecording + !ListItem.HasTimer</visible>
					</control>
					<control type="label">
						<!--Channel Name-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying | ListItem.IsRecording | ListItem.HasTimer">Conditional</animation>
						<posx>140</posx>
						<posy>10</posy>
						<width>450</width>
						<height>25</height>
						<font>Reg28</font>
						<textcolor>aawhite</textcolor>
						<selectedcolor>midgrey</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<!--Separator-->
						<posx>0</posx>
						<posy>105</posy>
						<width>530</width>
						<height>20</height>
						<fadetime>400</fadetime>
						<colordiffuse>list_separator</colordiffuse>
						<texture>common/separator.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="185" width="667">
					<control type="image">
						<!--Slider-->
						<posx>0</posx>
						<posy>0</posy>
						<width>650</width>
						<height>185</height>
						<texture diffuse="diffuse/panel.png" border="5" colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">colors/color_white.png</texture>
					</control>
					<control type="label">
						<!--Time-->
						<posx>10</posx>
						<posy>10</posy>
						<width>120</width>
						<height>25</height>
						<font>Reg26</font>
						<textcolor>black</textcolor>
						<selectedcolor>black</selectedcolor>
						<align>left</align>
						<label>[B]$INFO[ListItem.StartTime][/B]</label>
					</control>
					<control type="image">
						<!--Rec-->
						<posx>140</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>
						<texture>pvr/icons/pvr_record.png</texture>
						<visible>ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
					<control type="image">
						<!--Now Playing Icon-->
						<posx>140</posx>
						<posy>0</posy>
						<width>55</width>
						<height>55</height>
						<fadetime>600</fadetime>
						<texture>pvr/icons/pvr_play.png</texture>
						<visible>ListItem.IsPlaying + !ListItem.IsRecording + !ListItem.HasTimer</visible>
					</control>
					<control type="label">
						<!--Channel Name-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="ListItem.Isplaying | ListItem.IsRecording | ListItem.HasTimer">Conditional</animation>
						<posx>140</posx>
						<posy>10</posy>
						<width>450</width>
						<height>25</height>
						<font>Reg28</font>
						<textcolor>black</textcolor>
						<selectedcolor>black</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>[B]$INFO[ListItem.Label][/B]</label>
					</control>
					<control type="textbox">
						<!--Info Plot-->
						<posx>10</posx>
						<posy>38</posy>
						<width>650</width>
						<height>137</height>
						<font>Reg24</font>
						<align>left</align>
						<label fallback="19055">$INFO[ListItem.Plot]</label>
						<textcolor>black</textcolor>
					</control>
				</focusedlayout>
			</control>

		</control>
	</controls>
</window>
