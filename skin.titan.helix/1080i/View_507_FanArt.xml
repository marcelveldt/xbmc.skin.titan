<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>

    <include name="View_507_FanArt">
	
	 <!--View 507-->
        <control type="group">
            <visible>Control.IsVisible(507)</visible>
			<visible>IntegerGreaterThan(Container(507).NumItems,0)</visible>
            <include>animation_view_change</include>
            
            <!-- ID="52" -->
            <control type="panel" id="507">
                <posx>0</posx>
                <posy>40</posy>
                <width>1920</width>
                <height>800</height>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onleft>507</onleft>
                <onright>507</onright>
                <viewtype label="31434">fanart</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
				<visible>!container.content(episodes)</visible>
                <itemlayout height="1920" width="1080">
                </itemlayout>
                <focusedlayout height="1920" width="1080">
				
                </focusedlayout>
            </control>


			
			<!--Info-->
			<control type="group">
				<visible>Control.IsVisible(507) + !IsEmpty(ListItem.Label)</visible>
				<visible>Skin.HasSetting(FanArtViewShowInfo)</visible>
				<include>animation_view_change</include>

				<control type="image">
					<posx>50</posx>
					<posy>750</posy>
					<width>1820</width>
					<height>212</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<animation effect="fade" reversible="false" end="80" time="0" condition="true">Conditional</animation>
					<colordiffuse>$INFO[Skin.String(PanelColor)]</colordiffuse>
				</control>
				
				<control type="grouplist">
					<!--Regie, Duration... Movies, TV-Shows, Sesaons, Music-Videos-->
					<itemgap>0</itemgap>
					<onup>500</onup>
					<ondown>500</ondown>
					<onleft>100</onleft>
					<onright>noop</onright>
					<orientation>vertical</orientation>
					<posx>80</posx>
					<posy>760</posy>
					<control type="label">
						<height>33</height>
						<width>1100</width>
						<font>Bold30</font>
						<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
						<shadowcolor>$INFO[Skin.String(ViewDetailsFocusShadowColor)]</shadowcolor>
						<label>[UPPERCASE]$VAR[mediatitle][/UPPERCASE]</label>
					</control>
						<control type="label">
						  <height>40</height>
						  <width>1100</width>
						  <font>Reg31</font>
						  <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
						  <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
						  <label>$VAR[Details]</label>
					</control>
					<control type="textbox">
						<posx>0</posx>
						<posy>0</posy>
						<width>1770</width>
						<height>115</height>
						<label>$VAR[Plots]</label>
						<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
						<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
						<align>justify</align>
						<font>Light28</font>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>1100</width>
						<height>20</height>
						<label></label>
					</control>
				</control>
			
				<!-- touchscreen support -->
				<!-- page button left -->
				<control type="button">
					<left>0</left>
					<top>730</top>
					<width>30</width>
					<height>149</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>-</label>
					<pulseonselect>false</pulseonselect>
					<texturefocus colordiffuse="white">basichome_left.png</texturefocus>
					<texturenofocus colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">basichome_left.png</texturenofocus>
					<onclick>Control.Move(507,-1) </onclick>
					<visible>Skin.HasSetting(EnableTouchSupport)</visible>
				</control>

				<!-- page button right -->
				<control type="button">
					<right>0</right>
					<top>730</top>
					<width>30</width>
					<height>149</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>-</label>
					<pulseonselect>false</pulseonselect>
					<texturefocus colordiffuse="white">basichome_right.png</texturefocus>
					<texturenofocus colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">basichome_right.png</texturenofocus>
					<onclick>Control.Move(507,1) </onclick>
					<visible>Skin.HasSetting(EnableTouchSupport)</visible>
				</control>
			
			</control>
			
		
		</control>
        
       
    </include>
</includes>