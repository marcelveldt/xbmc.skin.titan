<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>

	<variable name="503_LogoImage">
		<value condition="Skin.HasSetting(LogoViewPreferClearArt) + !IsEmpty(ListItem.Art(clearart))">$INFO[ListItem.Art(clearart)]</value>
		<value condition="!IsEmpty(ListItem.Art(clearlogo))">$INFO[ListItem.Art(clearlogo)]</value>
		<value condition="!IsEmpty(ListItem.Art(landscape))">$INFO[ListItem.Art(landscape)]</value>
		<value condition="!IsEmpty(ListItem.Thumb)">$INFO[ListItem.Thumb]</value>
		<value condition="StringCompare(ListItem.Label,..)">DefaultFolderBack.png</value>
		<value>DefaultMovies.png</value>
	</variable>


    <include name="View_503_Logos">
	
		<control type="group">
			<include>animation_view_change</include>
			<defaultcontrol always="true">503</defaultcontrol>
			<visible>Control.IsVisible(503) + IntegerGreaterThan(Container.NumItems,0)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>

				<!-- movie details -->
				<control type="group">
					<visible>Skin.HasSetting(LogoViewShowInfo)</visible>
					<include>MovieDetails</include>
				</control>
			
				<control type="panel" id="503">
					<left>100</left>
					<top>520</top>
					<width>1760</width>
					<height>525</height>
					<onleft>503</onleft>
					<onright>503</onright>
					<onup>9000</onup>
					<ondown>61</ondown>
					<pagecontrol>61</pagecontrol>
					<preloaditems>2</preloaditems>
					<viewtype label="31461">list</viewtype>
					<scrolltime tween="quadratic" easing="out">300</scrolltime>
					<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
					<orientation>horizontal</orientation>
					<itemlayout width="530" height="450">
						<control type="group">
							<animation effect="fade" start="0" end="30" time="0" reversible="false" condition="true">Conditional</animation>
							<control type="image">
								<left>52</left>
								<top>178</top>
								<width>390</width>
								<height>164</height>
								<aspectratio aligny="center" align="center">keep</aspectratio>
								<texture background="true">$VAR[503_LogoImage]</texture>
							</control>
							<control type="image">
								<!--Watched Overlay-->
								<right>50</right>
								<top>170</top>
								<width>70</width>
								<height>70</height>
								<colordiffuse>ccFFFFFF</colordiffuse>
								<texture diffuse="diffuse/watched_icon.png">$VAR[WatchedImage]</texture>
								<visible>!Skin.HasSetting(HideWatchedOverlayLogos)</visible>
							</control>
							<control type="image">
								<!--Watched Overlay-->
								<right>50</right>
								<top>170</top>
								<width>70</width>
								<height>70</height>
								<colordiffuse>ccFFFFFF</colordiffuse>
								<texture diffuse="diffuse/watched_icon.png">$VAR[WatchedImage]</texture>
								<visible>!Skin.HasSetting(HideWatchedOverlayLogos)</visible>
							</control>
							<control type="label">
								<!--watched label-->
								<right>49</right>
								<top>174</top>
								<width>70</width>
								<height>60</height>
								<font>Reg22</font>
								<align>center</align>
								<label>$VAR[WatchedLabel]</label>
								<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
								<visible>!Skin.HasSetting(HideWatchedOverlayLogos)</visible>
							</control>
						</control>
					</itemlayout>
					<focusedlayout width="530" height="450">
						<control type="group">
							<animation effect="zoom" center="auto" start="100" end="130" time="480" tween="back" reversible="false">Focus</animation>
							<animation effect="zoom" center="auto" start="130" end="100" time="160" tween="back" reversible="false">UnFocus</animation>
							<control type="image">
								<left>33</left>
								<top>158</top>
								<width>430</width>
								<height>205</height>
								<aspectratio aligny="center" align="center">keep</aspectratio>
								<animation effect="fade" start="0" end="10" time="0" reversible="false" condition="true">Conditional</animation>
								<texture background="true">$VAR[503_LogoImage]</texture>
							</control>
							<control type="image">
								<left>52</left>
								<top>178</top>
								<width>390</width>
								<height>164</height>
								<aspectratio aligny="center" align="center">keep</aspectratio>
								<texture background="true">$VAR[503_LogoImage]</texture>
							</control>
							<control type="image">
								<!--Watched Overlay-->
								<right>50</right>
								<top>170</top>
								<width>70</width>
								<height>70</height>
								<colordiffuse>ccFFFFFF</colordiffuse>
								<texture diffuse="diffuse/watched_icon.png">$VAR[WatchedImage]</texture>
								<visible>!Skin.HasSetting(HideWatchedOverlayLogos)</visible>
							</control>
							<control type="image">
								<!--Watched Overlay-->
								<right>50</right>
								<top>170</top>
								<width>70</width>
								<height>70</height>
								<colordiffuse>ccFFFFFF</colordiffuse>
								<texture diffuse="diffuse/watched_icon.png">$VAR[WatchedImage]</texture>
								<visible>!Skin.HasSetting(HideWatchedOverlayLogos)</visible>
							</control>
							<control type="label">
								<!--watched label-->
								<right>49</right>
								<top>174</top>
								<width>70</width>
								<height>60</height>
								<font>Reg22</font>
								<align>center</align>
								<label>$VAR[WatchedLabel]</label>
								<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
								<visible>!Skin.HasSetting(HideWatchedOverlayLogos)</visible>
							</control>
						</control>
					</focusedlayout>

			</control>
		</control>
	</include>

</includes>